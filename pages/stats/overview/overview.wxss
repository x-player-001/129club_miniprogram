/* ========== 赛季选择弹窗 - 现代化 ========== */
.season-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(8rpx);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
  animation: maskFadeIn 0.3s ease;
}

@keyframes maskFadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.season-picker-modal {
  width: 100%;
  max-height: 70vh;
  background: #ffffff;
  border-radius: 40rpx 40rpx 0 0;
  animation: modalSlideUp 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
  display: flex;
  flex-direction: column;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.15);
}

@keyframes modalSlideUp {
  0% {
    transform: translateY(100%);
    opacity: 0;
  }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 36rpx 32rpx;
  border-bottom: 2rpx solid #f0f4f8;
}

.picker-title {
  font-size: 36rpx;
  font-weight: 800;
  color: #2c3e50;
}

.picker-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 50%;
  font-size: 32rpx;
  color: #636e72;
  transition: all 0.3s ease;
}

.picker-close:active {
  background: #ecf0f1;
  transform: scale(0.85) rotate(180deg);
}

.picker-list {
  flex: 1;
  padding: 20rpx 0;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 36rpx;
  transition: all 0.3s ease;
  position: relative;
}

.picker-item::after {
  content: '';
  position: absolute;
  left: 36rpx;
  right: 36rpx;
  bottom: 0;
  height: 1rpx;
  background: #f0f4f8;
}

.picker-item:last-child::after {
  display: none;
}

.picker-item:active {
  background: #f8f9fa;
}

.picker-item.active {
  background: linear-gradient(90deg, rgba(255, 107, 53, 0.05) 0%, rgba(255, 127, 80, 0.08) 100%);
}

.picker-item-name {
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 600;
}

.picker-item.active .picker-item-name {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 800;
}

.picker-check-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.9;
}

/* ========== 队伍战绩卡片 ========== */
.team-record-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.title-with-logo {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.team-logo-small {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* ========== 我的贡献卡片 ========== */
.contribution-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.contribution-items {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.contribution-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.contrib-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 4rpx;
}

.contrib-icon {
  font-size: 32rpx;
}

.contrib-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
}

.contrib-bar {
  width: 100%;
  height: 16rpx;
  background: #f1f3f5;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.contrib-bar-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.contrib-bar-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    90deg,
    rgba(255, 255, 255, 0) 0%,
    rgba(255, 255, 255, 0.3) 50%,
    rgba(255, 255, 255, 0) 100%
  );
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

.contrib-stats {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.contrib-my {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
}

.contrib-percent {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #ff9a62 0%, #ff7b54 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.contrib-team {
  font-size: 24rpx;
  color: #95a5a6;
  font-weight: 600;
}

/* ========== 场均数据卡片 ========== */
.average-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.average-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.average-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 28rpx 16rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 16rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s;
}

.average-item:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.avg-value {
  font-size: 48rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1;
}

.avg-label {
  font-size: 24rpx;
  color: #95a5a6;
  font-weight: 600;
}

/* ========== 底部占位 ========== */
.bottom-space {
  height: 60rpx;
}
