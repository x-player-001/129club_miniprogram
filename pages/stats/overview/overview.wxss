@keyframes float {
  0%, 100% {
    transform: translateY(0) translateX(0) rotate(0deg) scale(1);
    opacity: 0.8;
  }
  25% {
    transform: translateY(-30rpx) translateX(15rpx) rotate(5deg) scale(1.05);
    opacity: 1;
  }
  50% {
    transform: translateY(-50rpx) translateX(0) rotate(15deg) scale(1.1);
    opacity: 0.9;
  }
  75% {
    transform: translateY(-30rpx) translateX(-15rpx) rotate(5deg) scale(1.05);
    opacity: 1;
  }
}

@keyframes heroCardEntrance {
  0% {
    opacity: 0;
    transform: translateY(60rpx) scale(0.9);
    filter: blur(10rpx);
  }
  60% {
    transform: translateY(-10rpx) scale(1.02);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
    filter: blur(0);
  }
}

@keyframes cardFadeIn {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

