/* 核心4项数据 - 玻璃态设计 */
.hero-stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 2;
}

.hero-stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  /* 禁用首次入场动画，避免闪屏 */
  /* animation: statItemPop 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) backwards; */
}

/* 禁用延迟动画 */
/* .hero-stat-item:nth-child(1) { animation-delay: 0.15s; }
.hero-stat-item:nth-child(2) { animation-delay: 0.25s; }
.hero-stat-item:nth-child(3) { animation-delay: 0.35s; }
.hero-stat-item:nth-child(4) { animation-delay: 0.45s; } */

@keyframes statItemPop {
  0% {
    opacity: 0;
    transform: translateY(60rpx) scale(0.5) rotate(-10deg);
  }
  60% {
    transform: translateY(-10rpx) scale(1.1) rotate(5deg);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1) rotate(0deg);
  }
}

.stat-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1),
              inset 0 1rpx 1rpx rgba(255, 255, 255, 0.3);
  transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

.hero-stat-item:active .stat-icon-wrapper {
  transform: scale(1.15) rotate(10deg);
}

.stat-icon {
  width: 44rpx;
  height: 44rpx;
  filter: brightness(0);
  opacity: 0.8;
}

.hero-stat-item .stat-value {
  font-size: 56rpx;
  font-weight: 800;
  color: #101416;
  line-height: 1;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  letter-spacing: -1rpx;
}

.hero-stat-item .stat-label {
  font-size: 22rpx;
  color: #101416;
  opacity: 0.8;
  font-weight: 600;
}

/* 个人排名标签 - 流光效果 */
.hero-rankings {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  position: relative;
  z-index: 2;
}

.ranking-tag {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  /* 禁用首次入场动画，避免闪屏 */
  /* animation: rankTagBounce 0.8s cubic-bezier(0.68, -0.55, 0.265, 1.55) backwards; */
}

/* 禁用延迟动画 */
/* .ranking-tag:nth-child(1) { animation-delay: 0.6s; }
.ranking-tag:nth-child(2) { animation-delay: 0.7s; }
.ranking-tag:nth-child(3) { animation-delay: 0.8s; } */

@keyframes rankTagBounce {
  0% {
    opacity: 0;
    transform: scale(0.3) rotate(-15deg);
  }
  60% {
    transform: scale(1.1) rotate(5deg);
  }
  100% {
    opacity: 1;
    transform: scale(1) rotate(0deg);
  }
}

.rank-icon {
  font-size: 24rpx;
  flex-shrink: 0;
}

.rank-text {
  font-size: 22rpx;
  color: #101416;
  font-weight: 700;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

