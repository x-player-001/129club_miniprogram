/* 数据总览页面样式 - 高级感升级版 */

/* ========== 页面容器 ========== */
.overview-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4f8 0%, #e8eef5 100%);
  position: relative;
}

.overview-container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  background: linear-gradient(135deg, #ff7f50 0%, #ff6347 100%);
  opacity: 0.08;
  pointer-events: none;
  z-index: 0;
}

.content {
  height: 100vh;
  padding: 24rpx;
  position: relative;
  z-index: 1;
}

/* ========== 赛季选择器 - 优化版 ========== */
.season-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 28rpx;
  margin-bottom: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 53, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

.season-selector:active {
  transform: scale(0.95) rotate(1deg);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.15);
}

.season-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #2c3e50;
  /* background: linear-gradient(135deg, #ff7f50 0%, #ff6347 100%); */
  /* -webkit-background-clip: text; */
  /* -webkit-text-fill-color: transparent; */
  /* background-clip: text; */
}

.dropdown-icon {
  width: 24rpx;
  height: 24rpx;
  transition: transform 0.3s ease;
  opacity: 0.6;
}

/* ========== 个人数据英雄卡片 - 金黄色系 ========== */
.my-stats-hero-card {
  background: linear-gradient(135deg, #ebc678 0%, #e5bb65 50%, #dfb052 100%);
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 20rpx 60rpx rgba(235, 198, 120, 0.35);
  position: relative;
  overflow: hidden;
  /* 禁用首次入场动画，避免闪屏 */
  /* animation: heroCardEntrance 1s cubic-bezier(0.34, 1.56, 0.64, 1); */
}

