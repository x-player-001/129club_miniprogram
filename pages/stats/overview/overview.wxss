  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.6), transparent);
  transition: left 0.6s ease;
}

.achievement-item.unlocked {
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.08) 0%, rgba(255, 127, 80, 0.12) 100%);
  border-color: rgba(255, 107, 53, 0.3);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.15);
  /* 禁用闪烁动画，避免性能问题 */
  /* animation: achievementShine 2s ease-in-out infinite; */
}

@keyframes achievementShine {
  0%, 100% {
    box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.15);
  }
  50% {
    box-shadow: 0 12rpx 32rpx rgba(255, 107, 53, 0.3);
  }
}

.achievement-item.unlocked:active::before {
  left: 100%;
}

.achievement-item.locked {
  opacity: 0.5;
  filter: grayscale(100%);
}

.achievement-icon {
  font-size: 64rpx;
  line-height: 1;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
  /* 禁用图标跳动动画，避免性能问题 */
  /* animation: iconBounce 3s ease-in-out infinite; */
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
}

.achievement-icon .icon-emoji {
  font-size: 64rpx;
  line-height: 1;
}

.achievement-icon .icon-image {
  width: 64rpx;
  height: 64rpx;
}

@keyframes iconBounce {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-8rpx) scale(1.05);
  }
}

.achievement-name {
  font-size: 26rpx;
  font-weight: 700;
  color: #2c3e50;
  text-align: center;
}

.achievement-desc {
  font-size: 22rpx;
  color: #ff6b35;
  text-align: center;
  font-weight: 600;
