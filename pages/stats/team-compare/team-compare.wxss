/* pages/stats/team-compare/team-compare.wxss */
.page-container {
  min-height: 100vh;
  background: #f5f6f8;
  padding-bottom: 40rpx;
}

/* ========== 队伍选择 ========== */
.team-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  background: #ffffff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.team-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 16rpx;
  background: #f5f6f8;
  border-radius: 20rpx;
  transition: all 0.3s;
}

.team-option:active {
  transform: scale(0.95);
  background: #ecf0f1;
}

.team-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.team-name {
  font-size: 28rpx;
  font-weight: 700;
  text-align: center;
}

.placeholder {
  font-size: 26rpx;
  color: #95a5a6;
}

.vs-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  margin: 0 24rpx;
}

.vs-text {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--theme-color, #f20810);
  text-shadow: 0 2rpx 8rpx rgba(242, 8, 16, 0.2);
}

.swap-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f5f6f8;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.swap-btn:active {
  transform: rotate(180deg);
  background: #ecf0f1;
}

.swap-icon {
  font-size: 32rpx;
  color: #636e72;
}

/* ========== Section ========== */
.section {
  margin: 24rpx;
}

.section-title {
  margin-bottom: 16rpx;
}

.title-text {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 700;
}

/* ========== 胜率对比 ========== */
.win-rate-compare {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, var(--theme-color, #f20810) 0%, var(--theme-color-dark, #d10710) 100%);
  border-radius: 24rpx 24rpx 0 0;
  padding: 48rpx 32rpx;
  position: relative;
  overflow: hidden;
}

.win-rate-compare::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, transparent 100%);
}

.win-rate-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.rate {
  font-size: 56rpx;
  color: #ffffff;
  font-weight: 700;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.win-rate-item .label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.vs-divider {
  width: 2rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* ========== 对比数据网格 ========== */
.compare-grid {
  background: #ffffff;
  border-radius: 0 0 24rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.compare-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f5f6f8;
}

.compare-row:last-child {
  border-bottom: none;
}

.value-left,
.value-right {
  flex: 0 0 80rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #636e72;
}

.value-left {
  text-align: left;
}

.value-right {
  text-align: right;
}

.label-center {
  flex: 1;
  font-size: 26rpx;
  color: #95a5a6;
  text-align: center;
}

/* 颜色状态 */
.win {
  color: #27ae60 !important;
}

.draw {
  color: #f39c12 !important;
}

.loss {
  color: #e74c3c !important;
}

.positive {
  color: #27ae60 !important;
}

.negative {
  color: #e74c3c !important;
}

/* ========== 队内最佳 ========== */
.best-players {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-top: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.best-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.player-name {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
}

.player-stat {
  font-size: 36rpx;
  color: var(--theme-color, #f20810);
  font-weight: 700;
}

.player-label {
  font-size: 22rpx;
  color: #95a5a6;
}

.divider {
  width: 2rpx;
  height: 80rpx;
  background: #ecf0f1;
}

/* ========== 历史交锋 ========== */
.vs-history-list {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.history-match {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f5f6f8;
  transition: all 0.3s;
}

.history-match:last-child {
  border-bottom: none;
}

.history-match:active {
  background: #f8f9fa;
}

.match-date {
  min-width: 120rpx;
}

.date-text {
  font-size: 24rpx;
  color: #95a5a6;
}

.match-score {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.team1-score,
.team2-score {
  font-size: 40rpx;
  color: #636e72;
  font-weight: 700;
  min-width: 60rpx;
  text-align: center;
}

.team1-score.winner,
.team2-score.winner {
  color: var(--theme-color, #f20810);
}

.score-divider {
  font-size: 32rpx;
  color: #bdc3c7;
}

.match-result {
  flex: 1;
  text-align: center;
}

.result-text {
  font-size: 26rpx;
  font-weight: 600;
}

.result-text.win {
  /* 颜色由内联样式动态设置 */
}

.result-text.draw {
  color: #f39c12;
}

.arrow {
  font-size: 40rpx;
  color: #bdc3c7;
  line-height: 1;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #95a5a6;
}
