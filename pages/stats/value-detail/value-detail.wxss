/* 身价明细页面样式 */
.page-container {
  min-height: 100vh;
  background: #f5f6f8;
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: var(--theme-color, #f20810);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #95a5a6;
}

/* 用户信息卡片 - 金色系 */
.user-card {
  margin: 24rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #fff9e6 0%, #fff3cc 50%, #ffe8a3 100%);
  border-radius: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(218, 165, 32, 0.2);
  border: 2rpx solid rgba(218, 165, 32, 0.15);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(218, 165, 32, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(218, 165, 32, 0.2);
}

.user-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.user-name .name {
  font-size: 36rpx;
  font-weight: 700;
  color: #5c4a0e;
}

.user-name .jersey {
  font-size: 24rpx;
  color: #8b6914;
  background: rgba(218, 165, 32, 0.15);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.user-rank {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.rank-icon {
  font-size: 24rpx;
}

.rank-text {
  font-size: 24rpx;
  color: #8b6914;
}

/* 总身价 */
.total-value {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.value-number {
  font-size: 64rpx;
  font-weight: 800;
  color: #5c4a0e;
  line-height: 1;
}

.value-unit {
  font-size: 28rpx;
  font-weight: 700;
  color: #8b6914;
}

/* 身价构成 */
.value-breakdown {
  margin: 0 24rpx 24rpx;
  padding: 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.breakdown-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 24rpx;
}

.breakdown-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.breakdown-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.item-icon {
  font-size: 40rpx;
}

.item-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
}

.item-label {
  font-size: 22rpx;
  color: #95a5a6;
}

/* 明细列表 */
.records-section {
  margin: 0 24rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2c3e50;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.record-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  flex-shrink: 0;
}

.record-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.record-main {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.record-type {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  flex-shrink: 0;
}

.record-match {
  font-size: 24rpx;
  color: #7f8c8d;
  flex: 1;
  min-width: 0;
}

.record-sub {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 4rpx;
}

.record-desc {
  font-size: 24rpx;
  color: #95a5a6;
  flex: 1;
  word-break: break-all;
  line-height: 1.4;
}

.record-date {
  font-size: 22rpx;
  color: #bdc3c7;
  flex-shrink: 0;
}

.record-amount {
  font-size: 32rpx;
  font-weight: 700;
  flex-shrink: 0;
}

.record-amount.positive {
  color: #27ae60;
}

.record-amount.negative {
  color: #e74c3c;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  background: #ffffff;
  border-radius: 20rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #95a5a6;
}

/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  padding: 32rpx;
  font-size: 24rpx;
  color: #95a5a6;
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.apply-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.apply-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}
