/* pages/stats/ranking/ranking.wxss */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fef5f1 0%, #fff8f5 50%, #ffffff 100%);
  position: relative;
  overflow: hidden;
  padding-bottom: 40rpx;
}

/* ========== 头部背景装饰 ========== */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 600rpx;
  overflow: hidden;
  z-index: 0;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.1;
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(135deg, #ff9a62 0%, #ff7b54 100%);
  top: -200rpx;
  right: -100rpx;
  animation: float 8s ease-in-out infinite;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #ffd93d 0%, #ffb03a 100%);
  top: 100rpx;
  left: -100rpx;
  animation: float 6s ease-in-out infinite reverse;
}

.circle-3 {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #ff6b9d 0%, #c44569 100%);
  top: 300rpx;
  right: 50rpx;
  animation: float 10s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-30rpx) rotate(10deg);
  }
}

/* ========== Tab切换 ========== */
.tabs-wrapper {
  position: relative;
  z-index: 10;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  padding: 20rpx 24rpx;
  margin-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tabs {
  display: flex;
  gap: 12rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 0;
  border-radius: 24rpx;
  background: #f8f9fa;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.tab-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #ff9a62 0%, #ff7b54 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.tab-item.active::before {
  opacity: 1;
}

.tab-icon {
  font-size: 48rpx;
  transition: transform 0.3s;
  filter: grayscale(0.8) brightness(0.8);
  position: relative;
  z-index: 1;
}

.tab-item.active .tab-icon {
  filter: grayscale(0) brightness(1);
  transform: scale(1.2);
  animation: bounce 0.6s ease;
}

@keyframes bounce {
  0%, 100% {
    transform: scale(1.2);
  }
  50% {
    transform: scale(1.4);
  }
}

.tab-name {
  font-size: 26rpx;
  color: #95a5a6;
  font-weight: 500;
  transition: all 0.3s;
  position: relative;
  z-index: 1;
}

.tab-item.active .tab-name {
  color: #ffffff;
  font-weight: 700;
}

.tab-item.active {
  box-shadow: 0 6rpx 20rpx rgba(255, 154, 98, 0.4);
}

/* ========== 筛选器 ========== */
.filter-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx 24rpx;
  position: relative;
  z-index: 10;
}

.filter-group {
  display: flex;
  gap: 12rpx;
}

.filter-item {
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  color: #636e72;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s;
}

.filter-item.active {
  color: #ffffff;
  background: linear-gradient(135deg, #ff9a62 0%, #ff7b54 100%);
  box-shadow: 0 4rpx 16rpx rgba(255, 154, 98, 0.4);
  border-color: transparent;
}

.season-picker {
  padding: 12rpx 20rpx;
  background: #f8f9fa;
  border-radius: 32rpx;
  border: 1rpx solid #e9ecef;
}

.picker-text {
  font-size: 24rpx;
  color: #2c3e50;
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-weight: 600;
}

.picker-arrow {
  font-size: 20rpx;
  opacity: 0.6;
}

/* ========== 领奖台区域 ========== */
.podium-container {
  margin: 24rpx 24rpx 40rpx;
  padding: 40rpx 24rpx 60rpx;
  background: #ffffff;
  backdrop-filter: blur(30rpx);
  border-radius: 32rpx;
  border: 1rpx solid #f0f0f0;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 10;
}

.podium-stage {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  gap: 20rpx;
}

.podium-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  position: relative;
}

/* 头像容器 */
.player-avatar-wrapper {
  position: relative;
  margin-bottom: 16rpx;
}

.player-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #f5f6f8;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.rank-1 .player-avatar {
  width: 140rpx;
  height: 140rpx;
  border-width: 5rpx;
}

/* 头像光晕 */
.avatar-glow {
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  border-radius: 50%;
  z-index: -1;
  filter: blur(20rpx);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.6;
    transform: scale(1);
  }
  50% {
    opacity: 0.9;
    transform: scale(1.1);
  }
}

.glow-gold {
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
}

.glow-silver {
  background: linear-gradient(135deg, #c0c0c0 0%, #e8e8e8 100%);
}

.glow-bronze {
  background: linear-gradient(135deg, #cd7f32 0%, #e8a87c 100%);
}

/* 球员信息 */
.player-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #2c3e50;
  text-align: center;
  max-width: 160rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rank-1 .player-name {
  font-size: 32rpx;
}

.player-team {
  font-size: 22rpx;
  font-weight: 600;
  opacity: 0.8;
  text-align: center;
}

.player-value {
  display: flex;
  align-items: baseline;
  gap: 6rpx;
  margin-bottom: 16rpx;
}

.value-number {
  font-size: 48rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #ff9a62 0%, #ffd93d 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1;
}

.rank-1 .value-number {
  font-size: 56rpx;
}

.value-unit {
  font-size: 22rpx;
  color: #95a5a6;
  font-weight: 600;
}

/* 领奖台底座 */
.podium-base {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.base-top {
  width: 100%;
  height: 8rpx;
  border-radius: 4rpx 4rpx 0 0;
}

.base-1 .base-top {
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  box-shadow: 0 -2rpx 12rpx rgba(255, 215, 0, 0.5);
}

.base-2 .base-top {
  background: linear-gradient(135deg, #c0c0c0 0%, #e8e8e8 100%);
  box-shadow: 0 -2rpx 12rpx rgba(192, 192, 192, 0.5);
}

.base-3 .base-top {
  background: linear-gradient(135deg, #cd7f32 0%, #e8a87c 100%);
  box-shadow: 0 -2rpx 12rpx rgba(205, 127, 50, 0.5);
}

.base-rank {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  padding: 24rpx 0;
  background: #f8f9fa;
  backdrop-filter: blur(10rpx);
  border-radius: 0 0 16rpx 16rpx;
  border: 1rpx solid #e9ecef;
  border-top: none;
}

.base-1 .base-rank {
  height: 120rpx;
  background: linear-gradient(180deg, rgba(255, 215, 0, 0.15) 0%, rgba(255, 215, 0, 0.05) 100%);
}

.base-2 .base-rank {
  height: 100rpx;
  background: linear-gradient(180deg, rgba(192, 192, 192, 0.15) 0%, rgba(192, 192, 192, 0.05) 100%);
}

.base-3 .base-rank {
  height: 80rpx;
  background: linear-gradient(180deg, rgba(205, 127, 50, 0.15) 0%, rgba(205, 127, 50, 0.05) 100%);
}

/* ========== 完整排名区域 ========== */
.ranking-section {
  margin: 0 24rpx;
  position: relative;
  z-index: 10;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.header-line {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(90deg, transparent 0%, #e9ecef 50%, transparent 100%);
}

.header-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #2c3e50;
  letter-spacing: 2rpx;
}

/* ========== 排行榜列表 ========== */
.ranking-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  background: #ffffff;
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  border: 1rpx solid #f0f0f0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.ranking-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.ranking-item.highlight {
  background: linear-gradient(135deg, rgba(255, 154, 98, 0.1) 0%, rgba(255, 123, 84, 0.1) 100%);
  border-color: rgba(255, 154, 98, 0.3);
  box-shadow: 0 6rpx 20rpx rgba(255, 154, 98, 0.2);
}

/* 排名数字 */
.rank-number {
  width: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.rank-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #bdc3c7;
}

/* 小头像 */
.player-avatar-small {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid #f5f6f8;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  flex-shrink: 0;
}

/* 球员信息 */
.player-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.player-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.player-info .name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
}

.current-tag {
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #ff9a62 0%, #ff7b54 100%);
  border-radius: 12rpx;
  font-size: 20rpx;
  color: #ffffff;
  font-weight: 700;
  box-shadow: 0 2rpx 8rpx rgba(255, 154, 98, 0.4);
}

.meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.player-info .team {
  font-size: 24rpx;
  font-weight: 600;
}

.matches {
  font-size: 22rpx;
  color: #95a5a6;
}

/* 数据值 */
.value-container {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
  flex-shrink: 0;
}

.value-container .value {
  font-size: 40rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #ff9a62 0%, #ffd93d 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1;
}

.value-container .unit {
  font-size: 28rpx;
}

.value-container .label {
  font-size: 22rpx;
  color: #95a5a6;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #95a5a6;
}

/* ========== 底部占位 ========== */
.bottom-space {
  height: 40rpx;
}
