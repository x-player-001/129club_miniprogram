/* pages/season/detail/detail.wxss */
.page-container {
  min-height: 100vh;
  background: #f5f6f8;
  padding-bottom: 160rpx;
}

/* 赛季头部 */
.season-header {
  background: #ffffff;
  padding: 32rpx 24rpx;
  margin-bottom: 16rpx;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  gap: 16rpx;
}

.title-section {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
}

.season-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
}

.season-title {
  font-size: 28rpx;
  color: #636e72;
}

/* 信息网格 */
.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-label {
  font-size: 24rpx;
  color: #95a5a6;
}

.info-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
}

/* 比分区域 */
.score-section {
  padding-top: 24rpx;
  border-top: 1rpx solid #ecf0f1;
}

.section-label {
  display: block;
  font-size: 24rpx;
  color: #95a5a6;
  margin-bottom: 16rpx;
}

/* Tab栏 */
.tab-bar {
  display: flex;
  background: #ffffff;
  padding: 16rpx 24rpx;
  margin-bottom: 16rpx;
}

.tab-item {
  flex: 1;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #636e72;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: var(--theme-color, #f20810);
  color: #ffffff;
}

/* Tab内容 */
.tab-content {
  padding: 0 24rpx;
}

/* 比赛列表 */
.match-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.match-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #ecf0f1;
  transition: all 0.3s;
}

.match-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.match-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.match-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #95a5a6;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.match-date {
  font-size: 24rpx;
  color: #95a5a6;
}

.status-badge {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
  white-space: nowrap;
}

.status-badge.status-registration {
  background: #e3f2fd;
  color: #2196f3;
}

.status-badge.status-in_progress {
  background: #fff3e0;
  color: #ff9800;
}

.status-badge.status-completed {
  background: #f1f3f5;
  color: #636e72;
}

.status-badge.status-cancelled {
  background: #ffebee;
  color: #e74c3c;
}

.match-teams {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.team {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
  min-width: 0;
}

/* 左侧队伍：logo在左，name在右 */
.team-left {
  justify-content: flex-start;
}

.team-left .team-name {
  text-align: left;
}

/* 右侧队伍：name在左，logo在右 */
.team-right {
  justify-content: flex-end;
}

.team-right .team-name {
  text-align: right;
}

.team-logo {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.team-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.match-score {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.score {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--theme-color, #f20810);
  min-width: 40rpx;
  text-align: center;
}

.separator {
  font-size: 28rpx;
  font-weight: 600;
  color: #95a5a6;
}

/* 加载状态 */
.loading-container {
  padding: 80rpx 0;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #95a5a6;
}

/* 底部按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.action-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.action-btn.primary {
  background: var(--theme-color, #f20810);
  color: #ffffff;
}

.action-btn.secondary {
  background: #ecf0f1;
  color: #2c3e50;
}

/* 点球大战 */
.penalty-shootout {
  margin-top: 8rpx;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, rgba(242, 8, 16, 0.08) 0%, rgba(242, 8, 16, 0.04) 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.penalty-label {
  font-size: 22rpx;
  font-weight: 600;
  color: var(--theme-color, #f20810);
  letter-spacing: 0.5rpx;
}

.penalty-score {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.penalty-team {
  font-size: 26rpx;
  font-weight: 700;
  color: #636e72;
  font-family: 'DIN Alternate', sans-serif;
  min-width: 40rpx;
  text-align: center;
  transition: all 0.3s;
}

.penalty-team.winner {
  color: var(--theme-color, #f20810);
}

.penalty-separator {
  font-size: 24rpx;
  font-weight: 600;
  color: #95a5a6;
}
