/* pages/season/list/list.wxss */
.page-container {
  min-height: 100vh;
  background: #f5f6f8;
  padding-bottom: 160rpx;
}

/* Tab栏 */
.tab-bar {
  display: flex;
  background: #ffffff;
  padding: 16rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #636e72;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: var(--theme-color, #f20810);
  color: #ffffff;
}

/* 赛季列表 */
.season-list {
  padding: 24rpx;
}

/* 加载状态 */
.loading-container {
  padding: 80rpx 0;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #95a5a6;
}

/* 底部按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.create-btn {
  height: 88rpx;
  background: var(--theme-color, #f20810);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.create-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}
