/* 批量创建队伍页面 */
.batch-create-container {
  min-height: 100vh;
  background: #f5f6f8;
  display: flex;
  flex-direction: column;
}

.content {
  flex: 1;
  padding: 24rpx;
  padding-bottom: 160rpx;
}

/* 赛季信息 */
.season-info {
  background: linear-gradient(135deg, var(--theme-color) 0%, var(--theme-color-dark, #d10710) 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(242, 8, 16, 0.2);
}

.season-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}

.season-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
}

/* 提示信息 */
.tips {
  background: #fff3cd;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.tips-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.tips-text {
  font-size: 24rpx;
  color: #856404;
  line-height: 1.6;
  flex: 1;
}

/* 队伍表单区域 */
.team-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.header-dot {
  width: 8rpx;
  height: 32rpx;
  border-radius: 4rpx;
}

.team1-dot {
  background: var(--theme-color);
}

.team2-dot {
  background: #924ab0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
}

.required {
  color: var(--theme-color);
  font-size: 28rpx;
}

/* 输入框 */
.form-input {
  width: 100%;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #2c3e50;
  transition: all 0.3s;
  box-sizing: border-box;
  height: 80rpx;
  line-height: 80rpx;
}

.form-input:focus {
  background: #ffffff;
  border-color: var(--theme-color);
}

/* 选择器 */
.form-picker {
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s;
}

.form-picker:active {
  background: #e9ecef;
}

.picker-content {
  font-size: 28rpx;
  color: #2c3e50;
  flex: 1;
}

.picker-content.placeholder {
  color: #95a5a6;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.4;
  flex-shrink: 0;
}

/* 颜色选择网格 */
.color-grid {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 16rpx;
  margin-top: 8rpx;
}

.color-item {
  width: 100%;
  aspect-ratio: 1;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  border: 3rpx solid transparent;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.color-item.selected {
  border-color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  transform: scale(1.1);
}

.color-item:active {
  transform: scale(0.95);
}

.color-item .check-icon {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 700;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 底部占位 */
.bottom-space {
  height: 40rpx;
}

/* 底部按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  border: none;
  padding: 0;
  line-height: 88rpx;
}

/* 重置按钮默认样式 */
button {
  margin: 0;
  padding: 0;
  border: none;
  background: none;
  line-height: inherit;
}

button::after {
  border: none;
}

.cancel-btn {
  background: #f8f9fa;
  color: #636e72;
}

.cancel-btn:active {
  background: #e9ecef;
}

.submit-btn {
  background: linear-gradient(135deg, var(--theme-color) 0%, var(--theme-color-dark, #d10710) 100%);
  color: #ffffff;
}

.submit-btn:active {
  opacity: 0.8;
}

/* 球衣图片上传 */
.jersey-upload {
  margin-top: 8rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  background: #f8f9fa;
  border: 2rpx dashed #d0d0d0;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s;
}

.upload-btn:active {
  background: #e9ecef;
  border-color: var(--theme-color);
}

.upload-icon {
  font-size: 48rpx;
  color: #95a5a6;
  font-weight: 300;
}

.upload-text {
  font-size: 22rpx;
  color: #95a5a6;
}

.jersey-preview {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.jersey-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  background: #f8f9fa;
}

.delete-btn {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}
