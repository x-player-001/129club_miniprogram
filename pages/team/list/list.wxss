/* 队伍列表页面样式 */
.team-list-container {
  min-height: 100vh;
  background: #f5f6f8;
  display: flex;
  flex-direction: column;
}

/* Tab切换栏 */
.tab-bar {
  position: sticky;
  top: 0;
  background: #ffffff;
  display: flex;
  z-index: 100;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  position: relative;
  padding: 32rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s;
}

.tab-text {
  font-size: 30rpx;
  color: #7f8c8d;
  font-weight: 500;
  transition: all 0.3s;
}

.tab-item.active .tab-text {
  color: #ff6b6b;
  font-weight: 700;
}

.tab-line {
  position: absolute;
  bottom: 0;
  width: 60rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #ff6b6b 0%, #ee5a6f 100%);
  border-radius: 3rpx;
  animation: slideIn 0.3s ease;
}

@keyframes slideIn {
  from { width: 0; }
  to { width: 60rpx; }
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 32rpx;
}

/* 当前赛季信息卡片 */
.current-season {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.season-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
}

.season-status {
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.season-status.active {
  background: #e8f8f0;
  color: #27ae60;
}

.season-status.completed {
  background: #f5f6f8;
  color: #95a5a6;
}

.season-status.upcoming {
  background: #e3f2fd;
  color: #3498db;
}

/* 创建队伍提示卡片 */
.create-team-prompt {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.prompt-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.prompt-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.prompt-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 32rpx;
}

.prompt-actions {
  display: flex;
  gap: 16rpx;
  justify-content: center;
}

.prompt-btn {
  flex: 1;
  max-width: 280rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.prompt-btn::after {
  border: none;
}

.prompt-btn.create {
  background: #ffffff;
  color: #667eea;
}

.prompt-btn.reshuffle {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
}

/* 队伍列表 */
.team-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.team-card {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

/* 队伍头部 */
.team-header {
  position: relative;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
}

.team-badge {
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  margin-right: 24rpx;
}

.team-badge image {
  width: 64rpx;
  height: 64rpx;
}

.team-emoji {
  font-size: 64rpx;
  line-height: 1;
}

.team-info {
  flex: 1;
}

.team-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.team-captain {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.crown-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.season-tag, .history-tag {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 队伍数据 */
.team-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.stat-value.win { color: #2ecc71; }
.stat-value.draw { color: #f39c12; }
.stat-value.loss { color: #e74c3c; }

.stat-label {
  font-size: 24rpx;
  color: #95a5a6;
}

.stat-divider {
  width: 2rpx;
  height: 56rpx;
  background: #ecf0f1;
}

/* 队伍底部 */
.team-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
}

.member-count {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #7f8c8d;
}

.member-count .icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.win-rate {
  font-size: 26rpx;
  color: #7f8c8d;
}

.win-rate .rate {
  font-size: 32rpx;
  font-weight: 700;
  color: #ff6b6b;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 60rpx;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
  opacity: 0.4;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #7f8c8d;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #bdc3c7;
}

.bottom-space {
  height: 40rpx;
}

/* 赛季筛选器 */
.season-filter {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.filter-label {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
}

.filter-value {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: var(--theme-color, #f20810);
}

.filter-value .placeholder {
  color: #95a5a6;
}

.dropdown-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 赛季选择器弹窗 */
.season-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.picker-content {
  width: 100%;
  max-height: 80vh;
  background: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.picker-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #f0f0f0;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-btn image {
  width: 32rpx;
  height: 32rpx;
}

.picker-list {
  flex: 1;
  padding: 16rpx 0;
}

.season-option {
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: background 0.2s;
}

.season-option.active {
  background: #f8f9fa;
}

.season-option:active {
  background: #f0f0f0;
}

.option-info {
  flex: 1;
}

.option-name {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.option-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
}

.option-status.active {
  background: #e8f8f0;
  color: #27ae60;
}

.option-status.completed {
  background: #f5f6f8;
  color: #95a5a6;
}

.option-status.upcoming {
  background: #e3f2fd;
  color: #3498db;
}

.check-icon {
  width: 40rpx;
  height: 40rpx;
}
