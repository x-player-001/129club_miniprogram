/* 队伍重组（Draft选人）页面样式 */
.reshuffle-container {
  min-height: 100vh;
  background: #f5f6f8;
  display: flex;
  flex-direction: column;
}

/* 顶部进度条 */
.progress-header {
  background: #ffffff;
  padding: 24rpx 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #2c3e50;
}

.turn-indicator {
  font-size: 26rpx;
  color: #636e72;
}

.captain-name {
  font-weight: 700;
}

.captain1-color {
  color: var(--theme-color);
}

.captain2-color {
  color: #924ab0;
}

.progress-bar {
  height: 12rpx;
  background: #ecf0f1;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--theme-color) 0%, #924ab0 100%);
  transition: width 0.3s;
  border-radius: 6rpx;
}

/* 内容区域 */
.content {
  flex: 1;
}

/* Draft进行中区域 */
.draft-area {
  padding: 24rpx;
}

/* 三栏布局 */
.teams-layout {
  display: flex;
  gap: 16rpx;
  min-height: calc(100vh - 200rpx);
}

/* 队伍栏（左右） */
.team-column {
  flex: 0 0 180rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.team1-column {
  border-top: 6rpx solid var(--theme-color);
}

.team2-column {
  border-top: 6rpx solid #924ab0;
}

.team-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ecf0f1;
  margin-bottom: 20rpx;
}

.captain-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 12rpx;
}

.team-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 8rpx;
}

.team-count {
  font-size: 22rpx;
  color: #95a5a6;
}

.player-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.player-item-small {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.player-avatar-small {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-bottom: 8rpx;
}

.player-info-small {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.player-name-small {
  font-size: 24rpx;
  font-weight: 600;
  color: #2c3e50;
  text-align: center;
}

.player-number-small {
  font-size: 20rpx;
  color: #95a5a6;
}

.captain-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  padding: 4rpx 8rpx;
  background: var(--theme-color);
  color: #ffffff;
  font-size: 18rpx;
  border-radius: 8rpx;
}

/* 可选球员栏（中间） */
.available-column {
  flex: 1;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.available-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ecf0f1;
  margin-bottom: 20rpx;
}

.available-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2c3e50;
}

.available-count {
  font-size: 24rpx;
  color: #95a5a6;
}

.available-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 球员卡片 */
.player-card {
  position: relative;
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border: 3rpx solid #ecf0f1;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.player-card:active {
  transform: scale(0.98);
}

.player-card.selected {
  background: linear-gradient(135deg, rgba(242, 8, 16, 0.1) 0%, rgba(146, 74, 176, 0.1) 100%);
  border-color: var(--theme-color);
  box-shadow: 0 4rpx 16rpx rgba(242, 8, 16, 0.2);
}

.player-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.player-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.player-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.player-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #2c3e50;
}

.player-number {
  font-size: 26rpx;
  font-weight: 700;
  color: #95a5a6;
}

.player-position {
  font-size: 24rpx;
  color: #636e72;
  padding: 4rpx 12rpx;
  background: #dfe6e9;
  border-radius: 8rpx;
  align-self: flex-start;
}

.player-stats {
  display: flex;
  gap: 20rpx;
  margin-top: 8rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.stat-label {
  font-size: 22rpx;
}

.stat-value {
  font-size: 24rpx;
  font-weight: 700;
  color: #2c3e50;
}

.check-icon {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  background: var(--theme-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(242, 8, 16, 0.4);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #95a5a6;
}

/* 操作按钮栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.confirm-btn {
  width: 100%;
  height: 88rpx;
  padding: 0;
  background: linear-gradient(135deg, var(--theme-color) 0%, #924ab0 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(242, 8, 16, 0.4);
  transition: all 0.3s;
}

.confirm-btn::after {
  border: none;
}

.confirm-btn:active {
  transform: scale(0.98);
}

/* 等待提示 */
.waiting-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  background: #fff3cd;
  border: 2rpx solid #ffeaa7;
  border-radius: 16rpx;
  margin-top: 24rpx;
}

.waiting-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.waiting-text {
  font-size: 28rpx;
  color: #856404;
  font-weight: 600;
}

/* Draft完成区域 */
.complete-area {
  padding: 24rpx;
}

.complete-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  background: linear-gradient(135deg, #55efc4 0%, #00b894 100%);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 184, 148, 0.3);
}

.complete-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.complete-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.complete-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 队名设置区域 */
.team-name-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.team-name-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
}

.card-captain {
  font-size: 24rpx;
  color: #95a5a6;
}

.team-name-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #ecf0f1;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2c3e50;
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.team-name-input:focus {
  background: #ffffff;
  border-color: var(--theme-color);
}

.team-members-preview {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.preview-label {
  font-size: 24rpx;
  color: #636e72;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.preview-names {
  font-size: 26rpx;
  color: #2c3e50;
  line-height: 1.6;
  display: block;
}

/* 发布按钮 */
.publish-btn {
  width: 100%;
  height: 88rpx;
  padding: 0;
  background: linear-gradient(135deg, var(--theme-color) 0%, var(--theme-color-dark) 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(242, 8, 16, 0.4);
  transition: all 0.3s;
}

.publish-btn::after {
  border: none;
}

.publish-btn:active {
  transform: scale(0.98);
}

/* 底部占位 */
.bottom-space {
  height: 180rpx;
}
