/* pages/team/create/create.wxss */
.create-team-container {
  width: 100%;
  height: 100vh;
  background: #f5f6f8;
  display: flex;
  flex-direction: column;
}

.content {
  flex: 1;
  padding: 24rpx;
}

/* 表单区域 */
.form-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
}

.required {
  margin-left: 8rpx;
  color: #e74c3c;
  font-size: 32rpx;
  line-height: 1;
}

.optional {
  margin-left: 8rpx;
  color: #95a5a6;
  font-size: 24rpx;
}

/* Logo 上传 */
.logo-upload {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
  cursor: pointer;
}

.logo-preview {
  width: 100%;
  height: 100%;
}

.logo-placeholder {
  width: 100%;
  height: 100%;
  background: #f5f6f8;
  border: 2rpx dashed #d1d5db;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.upload-icon {
  font-size: 48rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #95a5a6;
}

/* 输入框 */
.form-input {
  width: 100%;
  padding: 24rpx;
  background: #f5f6f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #2c3e50;
  line-height: 1.5;
  box-sizing: border-box;
  min-height: 80rpx;
  display: flex;
  align-items: center;
}

/* 颜色选择 */
.color-grid {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 16rpx;
}

.color-item {
  aspect-ratio: 1;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.2s;
}

.color-item.selected {
  transform: scale(1.1);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.check-icon {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}

/* 选择器 */
.form-picker {
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
}

.picker-content {
  flex: 1;
  padding: 24rpx;
  background: #f5f6f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #2c3e50;
  line-height: 1.5;
  box-sizing: border-box;
  min-height: 80rpx;
  display: flex;
  align-items: center;
}

.picker-content.placeholder {
  color: #95a5a6;
}

.arrow-icon {
  position: absolute;
  right: 24rpx;
  width: 24rpx;
  height: 24rpx;
  opacity: 0.5;
}

/* 底部占位 */
.bottom-space {
  height: 120rpx;
}

/* 底部按钮 */
.bottom-actions {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  background: #ffffff;
  border-top: 1rpx solid #e8e8e8;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.cancel-btn {
  background: #f5f6f8;
  color: #95a5a6;
}

.submit-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}
