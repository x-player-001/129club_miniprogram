/* 队伍对战记录页面样式 */
.vs-container {
  min-height: 100vh;
  background: #f5f6f8;
  padding-bottom: 40rpx;
}

/* 对战头部 */
.vs-header {
  background: linear-gradient(135deg, var(--theme-color) 0%, var(--theme-color-dark) 100%);
  padding: 80rpx 40rpx 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.team-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.team-badge {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  margin-bottom: 20rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.2);
}

.team-badge image {
  width: 80rpx;
  height: 80rpx;
}

.team-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.team-wins {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  padding: 8rpx 24rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
}

/* VS 标识 */
.vs-divider {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 32rpx;
}

.vs-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.vs-record {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 数据对比 */
.stats-compare {
  margin: -40rpx 32rpx 32rpx;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 32rpx;
}

.title-line {
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(180deg, var(--theme-color) 0%, var(--theme-color-dark) 100%);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.compare-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.compare-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.compare-value {
  width: 100rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
}

.compare-value.left {
  color: var(--theme-color);
}

.compare-value.right {
  color: #4a90e2;
}

.compare-label {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #7f8c8d;
}

/* 历史对战记录 */
.match-history {
  margin: 0 32rpx;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.match-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.match-card {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 32rpx;
  transition: transform 0.2s, box-shadow 0.2s;
}

.match-card:active {
  transform: translateY(2rpx);
}

.match-date {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.date-text {
  font-size: 26rpx;
  color: #7f8c8d;
  font-weight: 600;
}

.time-text {
  font-size: 24rpx;
  color: #95a5a6;
}

.match-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.match-teams {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.team-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.team-info.left {
  align-items: flex-start;
}

.team-info.right {
  align-items: flex-end;
}

.team-logo {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 12rpx;
}

.team-name-small {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: 500;
}

.match-score {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin: 0 32rpx;
}

.score-num {
  font-size: 48rpx;
  font-weight: 700;
  color: #2c3e50;
}

.score-num.win {
  color: var(--color-success);
}

.score-num.loss {
  color: #95a5a6;
}

.score-divider {
  font-size: 32rpx;
  color: #bdc3c7;
}

.match-location {
  text-align: center;
  font-size: 24rpx;
  color: #95a5a6;
}

.match-scorers {
  padding-top: 20rpx;
  border-top: 1rpx solid #e0e0e0;
}

.scorers-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.scorer-item {
  font-size: 22rpx;
  color: #7f8c8d;
  padding: 6rpx 16rpx;
  background: rgba(255, 107, 107, 0.1);
  border-radius: 12rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #95a5a6;
}

.bottom-space {
  height: 40rpx;
}
