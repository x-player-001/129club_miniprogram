/* 队伍详情页面样式 */
.team-detail-container {
  min-height: 100vh;
  background: #f5f6f8;
  padding-bottom: 40rpx;
}

/* 队伍头部 */
.team-header {
  position: relative;
  padding: 30rpx 60rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.team-badge {
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(20rpx);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 6rpx solid rgba(255, 255, 255, 0.5);
  margin-bottom: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
}

.team-badge image {
  width: 100rpx;
  height: 100rpx;
}

.team-name {
  font-size: 52rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.team-captain {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
  margin-bottom: 16rpx;
}

.crown {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.season-info {
  padding: 8rpx 24rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #ffffff;
}

.captain-actions {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
}

.action-icon-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.action-icon-btn:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.5);
}

.action-icon-btn image {
  width: 36rpx;
  height: 36rpx;
}

/* 战绩数据 */
.stats-section {
  margin: 40rpx 32rpx 32rpx;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 32rpx;
}

.title-line {
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(180deg, #ff6b6b 0%, #ee5a6f 100%);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.stats-cards {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
}

.stat-number {
  font-size: 44rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.stat-number.win { color: #2ecc71; }
.stat-number.draw { color: #f39c12; }
.stat-number.loss { color: #e74c3c; }

.stat-label {
  font-size: 24rpx;
  color: #95a5a6;
}

/* 战绩详情 */
.stats-details {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 32rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 24rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-label {
  font-size: 28rpx;
  color: #7f8c8d;
}

.detail-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
}

.detail-value.primary { color: #ff6b6b; }
.detail-value.positive { color: #2ecc71; }
.detail-value.negative { color: #e74c3c; }

/* 近期战绩 */
.recent-results {
  display: flex;
  align-items: center;
}

.results-label {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-right: 16rpx;
}

.results-list {
  flex: 1;
  display: flex;
  gap: 12rpx;
}

.result-dot {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 700;
  color: #ffffff;
}

.result-dot.win { background: #2ecc71; }
.result-dot.draw { background: #f39c12; }
.result-dot.loss { background: #e74c3c; }

/* 队员列表 */
.members-section {
  margin: 0 32rpx 32rpx;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.view-all {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #ff6b6b;
}

.view-all image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
}

.members-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.member-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
}

.member-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.member-info {
  flex: 1;
}

.member-name {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.captain-badge {
  width: 28rpx;
  height: 28rpx;
  margin-left: 8rpx;
}

.member-meta {
  display: flex;
  gap: 16rpx;
  font-size: 24rpx;
  color: #95a5a6;
}

.jersey-number {
  padding: 4rpx 12rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 12rpx;
  color: #ff6b6b;
}

.member-stats {
  display: flex;
  gap: 24rpx;
}

.stat-mini {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-mini .value {
  font-size: 28rpx;
  font-weight: 700;
  color: #ff6b6b;
}

.stat-mini .label {
  font-size: 20rpx;
  color: #95a5a6;
}

/* 队内排行 */
.ranking-section {
  margin: 0 32rpx 32rpx;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.ranking-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.rank-tab {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #7f8c8d;
  transition: all 0.3s;
}

.rank-tab.active {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: #ffffff;
  font-weight: 600;
}

.ranking-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.rank-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.rank-item.top1 { background: linear-gradient(135deg, #ffd89b 0%, #ff8a60 100%); }
.rank-item.top2 { background: linear-gradient(135deg, #d7d7d7 0%, #9e9e9e 100%); }
.rank-item.top3 { background: linear-gradient(135deg, #ffc371 0%, #ff6161 100%); }

.rank-item.top1, .rank-item.top2, .rank-item.top3 {
  color: #ffffff;
}

.rank-number {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  margin-right: 16rpx;
}

.rank-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.rank-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
}

.rank-value {
  font-size: 32rpx;
  font-weight: 700;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  gap: 24rpx;
  padding: 0 32rpx;
}

.quick-btn {
  flex: 1;
  height: 96rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.3);
}

.quick-btn::after {
  border: none;
}

.quick-btn image {
  width: 40rpx;
  height: 40rpx;
}

.bottom-space {
  height: 40rpx;
}
