/* 比赛报名页面样式 - 高级版 */

/* ========== 基础容器 ========== */
.register-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #0a0e27 0%, #1a1d35 50%, #f5f6f8 100%);
  position: relative;
  overflow: hidden;
}

/* 顶部渐变背景 */
.top-gradient {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 600rpx;
  background: linear-gradient(180deg,
    rgba(242, 8, 16, 0.15) 0%,
    rgba(242, 8, 16, 0.08) 50%,
    transparent 100%
  );
  pointer-events: none;
  z-index: 0;
}

.content {
  flex: 1;
  padding: 24rpx;
  position: relative;
  z-index: 1;
}

/* ========== 英雄卡片 ========== */
.hero-card {
  position: relative;
  background: linear-gradient(135deg,
    rgba(15, 15, 35, 0.95) 0%,
    rgba(25, 25, 45, 0.98) 100%
  );
  border-radius: 32rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  box-shadow:
    0 20rpx 60rpx rgba(0, 0, 0, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

/* 背景装饰圆圈 */
.hero-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  z-index: 0;
}

.circle-1,
.circle-2,
.circle-3 {
  position: absolute;
  border-radius: 50%;
  opacity: 0.1;
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, var(--theme-color) 0%, transparent 70%);
  top: -200rpx;
  right: -100rpx;
  animation: float-rotate 20s ease-in-out infinite;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, #924ab0 0%, transparent 70%);
  bottom: -150rpx;
  left: -80rpx;
  animation: float-rotate 15s ease-in-out infinite reverse;
}

.circle-3 {
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, #3498db 0%, transparent 70%);
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  animation: pulse-glow 8s ease-in-out infinite;
}

@keyframes float-rotate {
  0%, 100% {
    transform: rotate(0deg) scale(1);
  }
  50% {
    transform: rotate(180deg) scale(1.1);
  }
}

@keyframes pulse-glow {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.1;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.3);
    opacity: 0.2;
  }
}

/* ========== 招募横幅 ========== */
.recruiting-banner {
  position: relative;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: linear-gradient(90deg,
    rgba(242, 8, 16, 0.2) 0%,
    rgba(242, 8, 16, 0.1) 100%
  );
  border: 2rpx solid rgba(242, 8, 16, 0.3);
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  z-index: 1;
  overflow: hidden;
}

.recruiting-banner::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.1) 50%,
    transparent 100%
  );
  animation: shine 3s ease-in-out infinite;
}

@keyframes shine {
  0% {
    left: -100%;
  }
  100% {
    left: 200%;
  }
}

.banner-icon {
  font-size: 40rpx;
  filter: drop-shadow(0 0 8rpx rgba(242, 8, 16, 0.6));
}

.pulse {
  animation: pulse-scale 1.5s ease-in-out infinite;
}

@keyframes pulse-scale {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.15);
  }
}

.banner-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.banner-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 1rpx;
}

.banner-subtitle {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.banner-badge {
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, var(--theme-color) 0%, #ff4757 100%);
  color: #ffffff;
  font-size: 20rpx;
  font-weight: 700;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(242, 8, 16, 0.4);
  letter-spacing: 2rpx;
}

.shake {
  animation: shake 2s ease-in-out infinite;
}

@keyframes shake {
  0%, 100% {
    transform: rotate(0deg);
  }
  10%, 30%, 50%, 70%, 90% {
    transform: rotate(-3deg);
  }
  20%, 40%, 60%, 80% {
    transform: rotate(3deg);
  }
}

/* ========== 对阵区域 ========== */
.match-vs-hero {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
  z-index: 1;
}

.team-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  transition: all 0.3s;
  cursor: pointer;
}

.team-section:active {
  transform: scale(0.95);
}

.team-logo-wrapper {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  transition: all 0.3s;
}

.team-logo-wrapper.active-team {
  transform: scale(1.15);
}

.team-logo-wrapper.active-team .team-logo-large {
  border-color: var(--theme-color);
  box-shadow:
    0 8rpx 24rpx rgba(0, 0, 0, 0.3),
    0 0 0 8rpx rgba(242, 8, 16, 0.2),
    0 0 20rpx 4rpx rgba(242, 8, 16, 0.4);
}

.float {
  animation: float-bounce 3s ease-in-out infinite;
}

.float-delay {
  animation: float-bounce 3s ease-in-out 0.5s infinite;
}

@keyframes float-bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-12rpx);
  }
}

.team-logo-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
  background: rgba(255, 255, 255, 0.95);
  box-shadow:
    0 8rpx 24rpx rgba(0, 0, 0, 0.3),
    0 0 0 8rpx rgba(255, 255, 255, 0.05);
  position: relative;
  z-index: 2;
}

.logo-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  z-index: 1;
  animation: glow-pulse 2s ease-in-out infinite;
}

@keyframes glow-pulse {
  0%, 100% {
    opacity: 0.6;
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    opacity: 0.9;
    transform: translate(-50%, -50%) scale(1.1);
  }
}

.team-name-hero {
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
  text-align: center;
  letter-spacing: 1rpx;
}

.team-count-badge {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg,
    rgba(242, 8, 16, 0.3) 0%,
    rgba(242, 8, 16, 0.2) 100%
  );
  border: 1rpx solid rgba(242, 8, 16, 0.4);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.count-number {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--theme-color);
  font-family: 'DIN Alternate', sans-serif;
}

.count-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* VS区域 */
.vs-section {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  margin: 0 20rpx;
}

.vs-text-hero {
  font-size: 36rpx;
  font-weight: 900;
  color: var(--theme-color);
  letter-spacing: 4rpx;
  text-shadow:
    0 0 20rpx rgba(242, 8, 16, 0.6),
    0 0 40rpx rgba(242, 8, 16, 0.4);
  animation: vs-glow 2s ease-in-out infinite;
}

@keyframes vs-glow {
  0%, 100% {
    transform: scale(1);
    text-shadow:
      0 0 20rpx rgba(242, 8, 16, 0.6),
      0 0 40rpx rgba(242, 8, 16, 0.4);
  }
  50% {
    transform: scale(1.1);
    text-shadow:
      0 0 30rpx rgba(242, 8, 16, 0.8),
      0 0 60rpx rgba(242, 8, 16, 0.6);
  }
}

.vs-line {
  width: 80rpx;
  height: 2rpx;
  background: linear-gradient(90deg,
    transparent 0%,
    var(--theme-color) 50%,
    transparent 100%
  );
}

/* 比赛标题 */
.match-title-hero {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  text-align: center;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  z-index: 1;
  position: relative;
}

/* ========== 关键信息 - 单行展示 ========== */
.match-info-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 16rpx;
  z-index: 1;
  position: relative;
}

.info-item-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}

.info-divider {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* ========== 出战阵容区域 ========== */
.roster-section {
  background: #ffffff;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.roster-header {
  margin-bottom: 28rpx;
}

.roster-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2c3e50;
}

/* 队员网格 */
.registered-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.player-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 8rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border: 2rpx solid #ecf0f1;
  border-radius: 16rpx;
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.player-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg,
    transparent 0%,
    rgba(242, 8, 16, 0.05) 50%,
    transparent 100%
  );
  transition: left 0.5s;
}

.player-card:active {
  transform: scale(0.97);
  border-color: var(--theme-color);
}

.player-card:active::before {
  left: 100%;
}

.fade-in-up {
  animation: fade-in-up 0.5s ease-out forwards;
  opacity: 0;
}

@keyframes fade-in-up {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.player-avatar-wrapper {
  position: relative;
  width: 70rpx;
  height: 70rpx;
}

.player-avatar-new {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  border: 3rpx solid #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
}

.avatar-ring {
  position: absolute;
  top: -3rpx;
  left: -3rpx;
  right: -3rpx;
  bottom: -3rpx;
  border-radius: 50%;
  border: 2rpx solid var(--theme-color);
  opacity: 0;
  animation: ring-pulse 2s ease-in-out infinite;
}

@keyframes ring-pulse {
  0%, 100% {
    opacity: 0;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.1);
  }
}

.player-jersey {
  position: absolute;
  bottom: -6rpx;
  right: -6rpx;
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--theme-color) 0%, var(--theme-color-dark) 100%);
  color: #ffffff;
  font-size: 18rpx;
  font-weight: 700;
  border-radius: 50%;
  border: 2rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(242, 8, 16, 0.4);
}

.player-details {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  width: 100%;
}

.player-name-new {
  font-size: 22rpx;
  font-weight: 600;
  color: #2c3e50;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.player-tags {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 4rpx;
}

.player-nickname-new {
  font-size: 20rpx;
  color: #95a5a6;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

/* 空状态 */
.empty-roster {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 80rpx 20rpx;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.3;
  animation: float-bounce 3s ease-in-out infinite;
}

.empty-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #95a5a6;
}

.empty-subtitle {
  font-size: 24rpx;
  color: #bdc3c7;
}

/* ========== 备注区域 ========== */
.remark-section {
  background: #ffffff;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.remark-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.remark-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2c3e50;
}

.optional-tag {
  padding: 4rpx 12rpx;
  background: #f8f9fa;
  color: #95a5a6;
  font-size: 20rpx;
  border-radius: 8rpx;
}

.remark-input {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #ecf0f1;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #2c3e50;
  line-height: 1.6;
  transition: all 0.3s;
}

.remark-input:focus {
  background: #ffffff;
  border-color: var(--theme-color);
  box-shadow: 0 0 0 4rpx rgba(242, 8, 16, 0.1);
}

.remark-placeholder {
  color: #bdc3c7;
}

/* ========== 比赛须知 ========== */
.notice-section {
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #ffb74d;
  box-shadow: 0 8rpx 32rpx rgba(255, 152, 0, 0.2);
}

.notice-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.notice-icon {
  font-size: 32rpx;
  animation: shake 2s ease-in-out infinite;
}

.notice-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #e65100;
}

.notice-content {
  padding: 20rpx 24rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
  border-left: 4rpx solid #ff9800;
}

.notice-text {
  font-size: 26rpx;
  color: #5d4037;
  line-height: 1.6;
}

/* ========== 底部操作栏 ========== */
.bottom-space {
  height: 180rpx;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #ffffff 20%);
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  backdrop-filter: blur(20rpx);
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.action-btn-new {
  flex: 1;
  height: 96rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.action-btn-new::after {
  border: none;
}

.action-btn-new:active {
  transform: scale(0.96);
}

/* 单按钮样式（占满整个宽度） */
.action-btn-single {
  width: 100%;
  height: 96rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
  padding: 0;
  margin: 0;
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  box-sizing: border-box;
}

.action-btn-single::after {
  border: none;
}

.action-btn-single:active {
  transform: scale(0.98);
}

.cancel-btn-new {
  flex: 0.8;
  background: linear-gradient(135deg, #ecf0f1 0%, #dfe6e9 100%);
  color: #636e72;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.submit-btn-new {
  background: linear-gradient(135deg, var(--theme-color) 0%, var(--theme-color-dark) 100%);
  color: #ffffff;
  box-shadow:
    0 8rpx 24rpx rgba(242, 8, 16, 0.4),
    0 0 0 0 rgba(242, 8, 16, 0.4);
  animation: button-pulse 2s ease-in-out infinite;
}

/* 取消报名按钮样式 */
.cancel-registered-btn {
  background: linear-gradient(135deg, #636e72 0%, #2d3436 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
}

@keyframes button-pulse {
  0%, 100% {
    box-shadow:
      0 8rpx 24rpx rgba(242, 8, 16, 0.4),
      0 0 0 0 rgba(242, 8, 16, 0.4);
  }
  50% {
    box-shadow:
      0 8rpx 32rpx rgba(242, 8, 16, 0.6),
      0 0 0 8rpx rgba(242, 8, 16, 0);
  }
}

.btn-glow {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.3) 50%,
    transparent 100%
  );
  animation: btn-shine 3s ease-in-out infinite;
}

@keyframes btn-shine {
  0% {
    left: -100%;
  }
  100% {
    left: 200%;
  }
}

.btn-text {
  position: relative;
  z-index: 1;
}

.btn-icon {
  font-size: 28rpx;
  filter: drop-shadow(0 0 8rpx rgba(255, 255, 255, 0.8));
  animation: icon-bounce 1s ease-in-out infinite;
}

@keyframes icon-bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-4rpx);
  }
}
