/* 创建比赛页面样式 */
.create-match-container {
  min-height: 100vh;
  background: #f5f6f8;
  display: flex;
  flex-direction: column;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 24rpx;
}

/* 表单区域 */
.form-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

/* 表单项 */
.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

/* 表单标签 */
.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
}

.required {
  color: var(--theme-color);
  font-size: 32rpx;
  margin-left: 8rpx;
}

/* 输入框 */
.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #ecf0f1;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2c3e50;
  transition: all 0.3s;
}

.form-input:focus {
  background: #ffffff;
  border-color: var(--theme-color);
}

.form-input::placeholder {
  color: #bdc3c7;
}

/* 队伍显示 */
.teams-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #ecf0f1;
  border-radius: 16rpx;
}

.team-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.team-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.team-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #2c3e50;
  text-align: center;
}

.vs-text {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--theme-color);
  padding: 0 24rpx;
}

/* 日期时间选择器容器 */
.datetime-picker-wrapper {
  display: flex;
  gap: 16rpx;
}

/* 选择器 */
.form-picker {
  width: 100%;
}

.datetime-picker {
  flex: 1;
}

.picker-content {
  height: 88rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #ecf0f1;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #2c3e50;
  transition: all 0.3s;
}

.picker-content.placeholder {
  color: #bdc3c7;
}

/* 地点选择按钮 */
.location-btn {
  width: 100%;
  height: 88rpx;
  margin-top: 16rpx;
  padding: 0;
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
  border: none;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(9, 132, 227, 0.3);
  transition: all 0.3s;
}

.location-btn::after {
  border: none;
}

.location-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(9, 132, 227, 0.4);
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
}

/* 地址文本 */
.address-text {
  padding: 20rpx 24rpx;
  background: #fff3cd;
  border: 2rpx solid #ffeaa7;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #856404;
  line-height: 1.6;
}

/* 人数计数器 */
.player-counter {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 32rpx;
}

.counter-btn {
  width: 64rpx;
  height: 64rpx;
  padding: 0;
  background: linear-gradient(135deg, var(--theme-color) 0%, var(--theme-color-dark) 100%);
  border: none;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(242, 8, 16, 0.3);
  transition: all 0.3s;
}

.counter-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(242, 8, 16, 0.4);
}

.counter-icon {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1;
}

.counter-value {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.value-number {
  font-size: 56rpx;
  font-weight: 700;
  color: var(--theme-color);
}

.value-label {
  font-size: 28rpx;
  color: #95a5a6;
}

/* 费用输入 */
.fee-input-wrapper {
  display: flex;
  align-items: center;
  gap: 12rpx;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #ecf0f1;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.fee-input-wrapper:focus-within {
  background: #ffffff;
  border-color: var(--theme-color);
}

.fee-symbol {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--theme-color);
}

.fee-input {
  flex: 1;
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
}

.fee-unit {
  font-size: 26rpx;
  color: #95a5a6;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #ecf0f1;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2c3e50;
  line-height: 1.6;
  transition: all 0.3s;
}

.form-textarea:focus {
  background: #ffffff;
  border-color: var(--theme-color);
}

.form-textarea::placeholder {
  color: #bdc3c7;
}

/* 提示文本 */
.form-hint {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #95a5a6;
  padding-left: 24rpx;
}

/* 底部占位 */
.bottom-space {
  height: 180rpx;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 24rpx;
  z-index: 100;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  padding: 0 24rpx;
  line-height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
  transition: all 0.3s;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.98);
}

.cancel-btn {
  background: linear-gradient(135deg, #dfe6e9 0%, #b2bec3 100%);
  color: #2d3436;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.submit-btn {
  background: linear-gradient(135deg, var(--theme-color) 0%, var(--theme-color-dark) 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(242, 8, 16, 0.4);
}
