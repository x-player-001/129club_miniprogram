/* 号码墙页面样式 */
.jersey-wall-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #0a0e27 0%, #1a1f3a 50%, #2c3e50 100%);
  padding-bottom: 40rpx;
}

/* ==================== 页面头部 ==================== */
.page-header {
  position: relative;
  padding: 60rpx 32rpx 40rpx;
  text-align: center;
  overflow: hidden;
}

.header-content {
  position: relative;
  z-index: 2;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: 800;
  color: #ffffff;
  letter-spacing: 4rpx;
  text-shadow: 0 4rpx 20rpx rgba(242, 8, 16, 0.5);
}

.header-subtitle {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  letter-spacing: 8rpx;
}

.header-decoration {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(242, 8, 16, 0.15) 0%, transparent 70%);
  z-index: 1;
}

/* ==================== 荣誉球员区域 ==================== */
.honorary-section {
  margin: 0 32rpx 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.1) 0%, rgba(218, 165, 32, 0.05) 100%);
  border-radius: 24rpx;
  border: 2rpx solid rgba(255, 215, 0, 0.3);
  backdrop-filter: blur(10rpx);
}

.honorary-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.honorary-title {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.title-icon {
  font-size: 32rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffd700;
  text-shadow: 0 2rpx 8rpx rgba(255, 215, 0, 0.5);
}

.honorary-subtitle {
  display: block;
  font-size: 20rpx;
  font-weight: 600;
  color: rgba(255, 215, 0, 0.6);
  letter-spacing: 4rpx;
}

.honorary-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.honorary-card {
  flex: 0 0 calc((100% - 32rpx) / 3);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 215, 0, 0.2);
  transition: all 0.3s ease;
}

.honorary-card:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.08);
}

.honorary-avatar-wrapper {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
}

.honorary-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 3rpx solid #ffd700;
  box-shadow: 0 4rpx 16rpx rgba(255, 215, 0, 0.3);
}

.honorary-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #ffd700 0%, #daa520 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(255, 215, 0, 0.4);
}

.badge-icon {
  font-size: 18rpx;
}

.honorary-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  width: 100%;
}

.honorary-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #ffffff;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
}

.honorary-number-tag {
  padding: 4rpx 12rpx;
  background: rgba(255, 215, 0, 0.2);
  border-radius: 8rpx;
  border: 1rpx solid rgba(255, 215, 0, 0.4);
}

.number-tag-text {
  font-size: 20rpx;
  font-weight: 600;
  color: #ffd700;
}

/* ==================== 筛选栏 ==================== */
.filter-bar {
  padding: 0 32rpx 24rpx;
}

.filter-tabs {
  display: flex;
  gap: 16rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  padding: 8rpx;
  backdrop-filter: blur(10rpx);
}

.filter-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 16rpx 12rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: linear-gradient(135deg, #f20810 0%, #d10710 100%);
  box-shadow: 0 8rpx 24rpx rgba(242, 8, 16, 0.4);
}

.tab-text {
  font-size: 26rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.7);
  transition: all 0.3s ease;
}

.filter-tab.active .tab-text {
  color: #ffffff;
}

.tab-count {
  font-size: 20rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.5);
  transition: all 0.3s ease;
}

.filter-tab.active .tab-count {
  color: rgba(255, 255, 255, 0.9);
}

/* ==================== 球衣网格 ==================== */
.jersey-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 0 24rpx;
}

.jersey-item {
  opacity: 1;
  transform: scale(1);
  transition: all 0.3s ease;
}

.jersey-item.hidden {
  display: none;
}

.jersey-item:active {
  transform: scale(0.95);
}

/* ==================== 球衣卡片 ==================== */
.jersey-card {
  position: relative;
  aspect-ratio: 0.9; /* 调整为接近正方形，稍微高一点 */
  background: rgba(255, 255, 255, 0.03);
  border-radius: 24rpx;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.jersey-item.used .jersey-card {
  border-color: rgba(242, 8, 16, 0.3);
}

.jersey-item:active .jersey-card {
  background: rgba(255, 255, 255, 0.08);
  border-color: rgba(242, 8, 16, 0.5);
}

/* ==================== 球衣形状 ==================== */
.jersey-shape {
  position: relative;
  width: 100%;
  height: 100%; /* 球衣占满整个卡片 */
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

/* 球衣主体 */
.jersey-body {
  position: relative;
  width: 70%;
  height: 100%;
  border-radius: 16rpx 16rpx 8rpx 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  overflow: hidden;
}

.jersey-body.used-color {
  background: linear-gradient(180deg, #f20810 0%, #d10710 100%);
}

.jersey-body.available-color {
  background: linear-gradient(180deg, #4a5568 0%, #2d3748 100%);
}

.jersey-body.honorary-color {
  background: linear-gradient(180deg, #f4c430 0%, #d4af37 100%);
}

/* 领口 */
.jersey-collar {
  position: absolute;
  top: 0;
  width: 50%;
  height: 20rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 0 0 20rpx 20rpx;
  z-index: 2;
}

/* 球衣名字 */
.jersey-name {
  position: relative;
  z-index: 3;
  margin-bottom: 4rpx;
}

.name-text {
  font-size: 22rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
  letter-spacing: 1rpx;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
  text-align: center;
}

.name-text.available {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 600;
}

/* 球衣号码 */
.jersey-number {
  position: relative;
  z-index: 3;
}

.number-text {
  font-size: 64rpx; /* 增大号码字体 */
  font-weight: 900;
  color: #ffffff;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.5),
               0 0 20rpx rgba(255, 255, 255, 0.2);
  font-family: 'Arial Black', sans-serif;
  letter-spacing: 2rpx;
}

/* 装饰条纹 */
.jersey-stripes {
  position: absolute;
  top: 30%;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  z-index: 1;
  opacity: 0.15;
}

.stripe {
  width: 100%;
  height: 3rpx;
  background: #ffffff;
}

/* 袖子 */
.jersey-sleeves {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 30%;
  display: flex;
  justify-content: space-between;
  z-index: 1;
}

.sleeve {
  width: 25%;
  height: 100%;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.sleeve.left {
  transform: skewY(-10deg);
  transform-origin: top right;
}

.sleeve.right {
  transform: skewY(10deg);
  transform-origin: top left;
}

.sleeve.used-color {
  background: #e81018; /* 使用中间色，避免渐变色差 */
}

.sleeve.available-color {
  background: #465164; /* 使用中间色，避免渐变色差 */
}

.sleeve.honorary-color {
  background: #e4b932; /* 金色中间色，与球衣渐变中间色一致 */
}

/* 荣誉标记 */
.honorary-crown {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 36rpx;
  height: 36rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.crown-icon {
  font-size: 20rpx;
}

/* 荣誉球衣卡片边框 */
.jersey-item.honorary .jersey-card {
  border-color: rgba(255, 215, 0, 0.4);
  box-shadow: 0 4rpx 20rpx rgba(255, 215, 0, 0.2);
}

/* ==================== 光晕效果 ==================== */
.jersey-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120%;
  height: 120%;
  border-radius: 50%;
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
  z-index: 0;
}

.jersey-glow.glow-red {
  background: radial-gradient(circle, rgba(242, 8, 16, 0.3) 0%, transparent 70%);
}

.jersey-glow.glow-gray {
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
}

.jersey-glow.glow-gold {
  background: radial-gradient(circle, rgba(255, 215, 0, 0.4) 0%, transparent 70%);
}

.jersey-item:active .jersey-glow {
  opacity: 1;
}

/* ==================== 底部提示 ==================== */
.footer-tips {
  margin-top: 48rpx;
  padding: 0 32rpx;
  display: flex;
  justify-content: center;
  gap: 48rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tip-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.tip-dot.used-dot {
  background: linear-gradient(135deg, #f20810 0%, #d10710 100%);
}

.tip-dot.available-dot {
  background: linear-gradient(135deg, #4a5568 0%, #2d3748 100%);
}

.tip-text {
  font-size: 24rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.7);
}

/* ==================== 动画效果 ==================== */
@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.jersey-item.used .jersey-card:active {
  animation: pulse 0.5s ease;
}
