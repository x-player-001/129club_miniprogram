<!-- 登录页面 -->
<view class="login-container">
  <!-- 背景装饰 -->
  <view class="bg-decoration"></view>

  <!-- Logo和标题区域 -->
  <view class="logo-section">
    <view class="logo-circle">
      <image class="logo" src="{{images.logo}}" mode="aspectFill"></image>
    </view>
    <text class="app-name">129俱乐部</text>
    <text class="app-slogan">队内管理系统</text>
  </view>

  <!-- 登录卡片 -->
  <view class="login-card">
    <view class="card-title">欢迎回来</view>
    <view class="card-subtitle">使用微信授权登录，开启足球之旅</view>

    <!-- 隐私协议勾选 -->
    <view class="privacy-agreement">
      <view class="checkbox-wrapper" bindtap="onTogglePrivacy">
        <view class="checkbox {{privacyAgreed ? 'checked' : ''}}">
          <view wx:if="{{privacyAgreed}}" class="checkmark"></view>
        </view>
        <view class="agreement-text">
          <text>我已阅读并同意</text><text class="link" catchtap="onViewPrivacy">《隐私保护指引》</text>
        </view>
      </view>
    </view>

    <!-- 微信登录按钮 -->
    <button
      class="login-btn"
      open-type="getUserInfo"
      bindgetuserinfo="onGetUserInfo"
      hover-class="login-btn-hover">
      <image class="wechat-icon" src="{{icons.wechat}}" mode="aspectFit"></image>
      <text>微信授权登录</text>
    </button>
  </view>

  <!-- 底部装饰 -->
  <view class="bottom-decoration">
    <image class="football-icon" src="{{images.football}}" mode="aspectFit"></image>
  </view>
</view>
