/* 登录页面样式 */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 60rpx 80rpx;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: -200rpx;
  right: -200rpx;
  width: 600rpx;
  height: 600rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  z-index: 0;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
  z-index: 1;
}

.logo-circle {
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 40rpx;
}

.logo {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 300;
}

/* 登录卡片 */
.login-card {
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 60rpx 50rpx;
  box-shadow: 0 20rpx 80rpx rgba(0, 0, 0, 0.15);
  z-index: 1;
}

.card-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.card-subtitle {
  font-size: 26rpx;
  color: #95a5a6;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

/* 隐私协议勾选 */
.privacy-agreement {
  margin-bottom: 32rpx;
}

.checkbox-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #d0d0d0;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  transition: all 0.3s;
  background: #ffffff;
  position: relative;
}

.checkbox.checked {
  background: #ffffff;
  border-color: #07c160;
}

/* CSS绘制的打勾符号 */
.checkmark {
  width: 16rpx;
  height: 8rpx;
  border-left: 3rpx solid #07c160;
  border-bottom: 3rpx solid #07c160;
  transform: rotate(-45deg);
  margin-bottom: 4rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: #636e72;
  line-height: 1.6;
  white-space: nowrap;
  flex-shrink: 0;
  display: flex;
  align-items: center;
}

.agreement-text text {
  font-size: 24rpx;
}

.agreement-text .link {
  color: var(--theme-color);
  text-decoration: underline;
  margin-left: 0;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a850 100%);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(7, 193, 96, 0.3);
  margin: 0;
  padding: 0;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.2);
}

.login-btn-hover {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.2);
}

.wechat-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 16rpx;
}

.login-btn text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

/* 底部装饰 */
.bottom-decoration {
  position: absolute;
  bottom: 60rpx;
  opacity: 0.1;
}

.football-icon {
  width: 200rpx;
  height: 200rpx;
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
