/* 用户信息完善页面样式 */
.profile-edit-container {
  min-height: 100vh;
  background: #f5f6f8;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  z-index: 100;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.status-bar {
  width: 100%;
}

.navbar-inner {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
}

.navbar-left {
  width: 80rpx;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.navbar-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #2c3e50;
}

.navbar-right {
  width: 80rpx;
}

/* 内容区域 */
.content {
  /* padding-top 和 height 通过内联样式动态设置 */
}

/* 头像区域 */
.avatar-section {
  background: #ffffff;
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-label {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 32rpx;
}

.avatar-upload {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.avatar-upload:active .avatar-mask {
  opacity: 1;
}

.camera-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.avatar-mask text {
  font-size: 22rpx;
  color: #ffffff;
}

/* 表单区域 */
.form-section {
  background: #ffffff;
  border-radius: 24rpx;
  margin: 0 32rpx 32rpx;
  overflow: hidden;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item.required .item-label::before {
  content: '*';
  color: #e74c3c;
  margin-right: 8rpx;
  font-size: 32rpx;
}

.item-label {
  width: 180rpx;
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 500;
}

.item-input {
  flex: 1;
  font-size: 30rpx;
  color: #2c3e50;
  text-align: right;
}

.item-input::placeholder {
  color: #bdc3c7;
}

.item-tip {
  font-size: 24rpx;
  color: #95a5a6;
  margin-left: 12rpx;
}

.item-picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 30rpx;
  color: #2c3e50;
}

.item-picker.placeholder text {
  color: #bdc3c7;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 16rpx;
}

/* 多行文本 */
.textarea-item {
  flex-direction: column;
  align-items: flex-start;
}

.textarea-item .item-label {
  margin-bottom: 24rpx;
}

.item-textarea {
  width: 100%;
  min-height: 160rpx;
  font-size: 30rpx;
  color: #2c3e50;
  line-height: 1.6;
}

.item-textarea::placeholder {
  color: #bdc3c7;
}

.textarea-counter {
  align-self: flex-end;
  font-size: 24rpx;
  color: #95a5a6;
  margin-top: 16rpx;
}

/* 固定在底部的提交按钮 */
.submit-section-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 99;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  transition: all 0.3s;
}

.submit-btn-hover {
  transform: scale(0.98);
  opacity: 0.9;
}

.bottom-space {
  height: 160rpx; /* 为固定按钮留出空间 */
}

/* 位置选择器弹出层 */
.position-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: none;
  animation: fadeIn 0.3s;
}

.position-picker-modal.show {
  display: flex;
  align-items: flex-end;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.position-picker-content {
  width: 100%;
  max-height: 80vh;
  background: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 选择器头部 */
.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 40rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-btn image {
  width: 32rpx;
  height: 32rpx;
}

/* 选择器内容 */
.picker-body {
  flex: 1;
  padding: 32rpx 40rpx;
  overflow-y: auto;
}

.position-group {
  margin-bottom: 40rpx;
}

.position-group:last-child {
  margin-bottom: 0;
}

.group-title {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 24rpx;
  font-weight: 500;
}

.position-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.position-tag {
  padding: 8rpx 16rpx;
  background: #f5f6f8;
  border-radius: 6rpx;
  border: 2rpx solid #e8e8e8;
  font-size: 24rpx;
  color: #2c3e50;
  transition: all 0.2s;
}

.position-tag.selected {
  background: #52c41a !important;
  color: #ffffff !important;
  border-color: #52c41a !important;
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.25) !important;
  font-weight: 600;
}

/* 选择器底部 */
.picker-footer {
  display: flex;
  gap: 24rpx;
  padding: 24rpx 40rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
}

.cancel-btn {
  background: #f5f6f8;
  color: #7f8c8d;
}

.cancel-btn::after {
  border: none;
}

.confirm-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: #ffffff;
}

.confirm-btn::after {
  border: none;
}
