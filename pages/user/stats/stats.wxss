/* pages/user/stats/stats.wxss */
.page-container {
  min-height: 100vh;
  background: #f5f6f8;
  padding-bottom: 40rpx;
}

/* ========== 用户信息头部 ========== */
.user-header {
  position: relative;
  padding: 60rpx 32rpx 40rpx;
  overflow: hidden;
}

.bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.15;
}

.user-info {
  position: relative;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.user-header .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.info-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-text .name {
  font-size: 36rpx;
  color: #2c3e50;
  font-weight: 700;
}

.meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.number {
  font-size: 26rpx;
  color: #636e72;
  font-weight: 600;
}

.position {
  font-size: 24rpx;
  color: #95a5a6;
}

.info-text .team {
  font-size: 28rpx;
  font-weight: 600;
}

/* ========== Section ========== */
.section {
  margin: 24rpx 24rpx 0;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.title-text {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 700;
}

.subtitle {
  font-size: 24rpx;
  color: #95a5a6;
}

.more {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.more-text {
  font-size: 26rpx;
  color: #95a5a6;
}

.more .arrow {
  font-size: 32rpx;
  color: #95a5a6;
  line-height: 1;
}

/* ========== 数据网格 ========== */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 0;
}

.stat-item .value {
  font-size: 40rpx;
  color: var(--theme-color, #f20810);
  font-weight: 700;
  line-height: 1;
}

.stat-item .label {
  font-size: 24rpx;
  color: #95a5a6;
}

/* ========== 战绩卡片 ========== */
.record-card {
  display: flex;
  justify-content: space-around;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  margin-top: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.record-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.record-value {
  font-size: 36rpx;
  color: #636e72;
  font-weight: 700;
}

.record-item.win .record-value {
  color: #27ae60;
}

.record-item.draw .record-value {
  color: #f39c12;
}

.record-item.loss .record-value {
  color: #e74c3c;
}

.record-label {
  font-size: 24rpx;
  color: #95a5a6;
}

/* ========== 本队数据卡片 ========== */
.team-stats-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.team-stats-card:active {
  transform: scale(0.98);
}

.team-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.team-logo {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
}

.team-name {
  font-size: 32rpx;
  font-weight: 700;
}

.team-data {
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
  padding: 24rpx 0;
  border-top: 1rpx solid #ecf0f1;
  border-bottom: 1rpx solid #ecf0f1;
}

.data-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.data-item .value {
  font-size: 36rpx;
  color: var(--theme-color, #f20810);
  font-weight: 700;
}

.data-item .label {
  font-size: 24rpx;
  color: #95a5a6;
}

.team-record {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-text {
  font-size: 26rpx;
  color: #636e72;
}

.win-rate {
  font-size: 26rpx;
  color: #27ae60;
  font-weight: 600;
}

/* ========== 效力历史 ========== */
.team-history-list {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.history-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f5f6f8;
  transition: all 0.3s;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background: #f8f9fa;
}

.history-item .team-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.team-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.team-info .team-name {
  font-size: 30rpx;
  font-weight: 600;
}

.season {
  font-size: 24rpx;
  color: #95a5a6;
}

.team-stats {
  display: flex;
  gap: 16rpx;
}

.team-stats .stat {
  font-size: 24rpx;
  color: #636e72;
}

.history-item .arrow {
  font-size: 40rpx;
  color: #bdc3c7;
  line-height: 1;
}

/* ========== 成就徽章 ========== */
.achievements-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.achievement-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.achievement-item.unlocked {
  background: linear-gradient(135deg, #fff5e6 0%, #ffe4cc 100%);
  border: 2rpx solid #f39c12;
}

.achievement-item.locked {
  opacity: 0.4;
}

.achievement-icon {
  font-size: 60rpx;
}

.achievement-name {
  font-size: 26rpx;
  color: #2c3e50;
  font-weight: 600;
  text-align: center;
}

.achievement-desc {
  font-size: 22rpx;
  color: #95a5a6;
  text-align: center;
}

/* ========== 近期比赛 ========== */
.match-list {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.match-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f5f6f8;
  transition: all 0.3s;
}

.match-item:last-child {
  border-bottom: none;
}

.match-item:active {
  background: #f8f9fa;
}

.match-date {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  min-width: 120rpx;
}

.date {
  font-size: 22rpx;
  color: #95a5a6;
}

.result-badge {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.result-win {
  background: #d4edda;
  color: #27ae60;
}

.result-draw {
  background: #fff3cd;
  color: #f39c12;
}

.result-loss {
  background: #f8d7da;
  color: #e74c3c;
}

.match-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.opponent {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
}

.score {
  font-size: 24rpx;
  color: #95a5a6;
}

.match-stats {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.match-stats .stat {
  font-size: 22rpx;
  color: #636e72;
  background: #f5f6f8;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.mvp-tag {
  font-size: 22rpx;
  color: #f39c12;
  background: #fff5e6;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

.match-item .arrow {
  font-size: 40rpx;
  color: #bdc3c7;
  line-height: 1;
}
