/* pages/user/stats/stats.wxss - 重构版 */

.page-container {
  min-height: 100vh;
  background: #f5f6f8;
  padding-bottom: 40rpx;
}

/* ========== 顶部个人信息卡片 ========== */
.profile-hero-card {
  background: linear-gradient(135deg, #ebc678 0%, #e5bb65 50%, #dfb052 100%);
  padding: 48rpx 32rpx;
  display: flex;
  gap: 24rpx;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(235, 198, 120, 0.3);
}

/* 左侧：用户信息 */
.profile-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 5rpx solid #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.profile-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.profile-name {
  font-size: 36rpx;
  font-weight: 800;
  color: #101416;
}

.profile-nickname {
  font-size: 24rpx;
  color: #101416;
  opacity: 0.7;
}

.profile-badge {
  margin-top: 8rpx;
  padding: 8rpx 20rpx;
  background: #101416;
  border-radius: 20rpx;
}

.badge-number {
  font-size: 24rpx;
  font-weight: 700;
  color: #ffffff;
}

/* 右侧：足球场 */
.field-wrapper {
  width: 260rpx;
  height: 390rpx; /* 2:3 宽高比 */
  flex-shrink: 0;
}

/* ========== 核心数据卡片（4宫格） ========== */
.core-stats-section {
  margin: 24rpx 32rpx;
}

.core-stats-grid {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.core-stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  transition: all 0.3s ease;
}

.core-stat-item:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
}

.stat-icon {
  width: 48rpx;
  height: 48rpx;
  opacity: 0.8;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 800;
  color: #2c3e50;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: 600;
}

/* ========== 次要数据（2列网格 + 进度条） ========== */
.secondary-stats-section {
  margin: 0 32rpx 24rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.stat-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.stat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.stat-card .stat-label {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: 600;
}

.stat-card .stat-value {
  font-size: 32rpx;
  font-weight: 800;
  color: #2c3e50;
}

.stat-progress-bar {
  width: 100%;
  height: 8rpx;
  background: #ecf0f1;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.8s ease;
}

/* ========== 排名荣誉（横向滚动） ========== */
.rankings-section {
  margin: 0 0 24rpx;
}

.section-title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx 16rpx;
}

.section-title-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
}

.achievement-count {
  font-size: 24rpx;
  color: #95a5a6;
  font-weight: 600;
}

.rankings-scroll {
  white-space: nowrap;
}

.rankings-list {
  display: inline-flex;
  gap: 16rpx;
  padding: 0 32rpx;
}

.ranking-badge {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx 32rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ecf0f1 100%);
  border-radius: 20rpx;
  min-width: 160rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.ranking-badge.gold {
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
}

.ranking-badge.silver {
  background: linear-gradient(135deg, #c0c0c0 0%, #e8e8e8 100%);
}

.ranking-badge.bronze {
  background: linear-gradient(135deg, #cd7f32 0%, #e9a56a 100%);
}

.ranking-icon {
  font-size: 48rpx;
}

.ranking-type {
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 600;
}

.ranking-rank {
  font-size: 28rpx;
  font-weight: 800;
  color: #2c3e50;
}

/* ========== 成就徽章区 ========== */
.achievements-section {
  margin: 0 0 24rpx;
}

.achievements-scroll {
  white-space: nowrap;
}

.achievements-list {
  display: inline-flex;
  gap: 20rpx;
  padding: 0 32rpx;
}

.achievement-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 20rpx;
  border-radius: 20rpx;
  min-width: 140rpx;
  transition: all 0.3s ease;
}

.achievement-item.unlocked {
  background: linear-gradient(135deg, #fff5e6 0%, #ffe4cc 100%);
  box-shadow: 0 4rpx 16rpx rgba(243, 156, 18, 0.2);
}

.achievement-item.locked {
  background: #f5f6f8;
  opacity: 0.6;
}

.achievement-item:active {
  transform: scale(0.95);
}

.achievement-icon {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-emoji {
  font-size: 64rpx;
}

.icon-image {
  width: 64rpx;
  height: 64rpx;
}

.achievement-name {
  font-size: 22rpx;
  color: #2c3e50;
  font-weight: 600;
  text-align: center;
  max-width: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.achievement-item.locked .achievement-name {
  color: #95a5a6;
}

/* ========== 底部占位 ========== */
.bottom-space {
  height: 40rpx;
}
