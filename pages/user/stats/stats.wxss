/* pages/user/stats/stats.wxss - 全新轻量设计 */

/* ==================== 页面容器 ==================== */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fef5f1 0%, #ffffff 100%);
  padding-bottom: 40rpx;
}

/* ==================== 顶部信息区域 ==================== */
.header-section {
  padding: 24rpx;
}

.profile-card {
  position: relative;
  background: linear-gradient(135deg, #fffbf0 0%, #fff8e6 50%, #ffefd5 100%);
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  box-shadow: 0 8rpx 28rpx rgba(218, 165, 32, 0.18);
  border: 2rpx solid rgba(218, 165, 32, 0.12);
  overflow: hidden;
}

/* 几何装饰 - 左上大圆 */
.geo-circle-1 {
  position: absolute;
  top: -100rpx;
  left: -100rpx;
  width: 280rpx;
  height: 280rpx;
  background: radial-gradient(circle,
    rgba(255, 193, 7, 0.18) 0%,
    rgba(255, 193, 7, 0.12) 40%,
    rgba(218, 165, 32, 0.08) 70%,
    transparent 100%);
  border-radius: 50%;
  z-index: 0;
}

/* 几何装饰 - 右下大圆 */
.geo-circle-2 {
  position: absolute;
  bottom: -120rpx;
  right: -100rpx;
  width: 320rpx;
  height: 320rpx;
  background: radial-gradient(circle,
    rgba(218, 165, 32, 0.2) 0%,
    rgba(255, 193, 7, 0.14) 40%,
    rgba(255, 215, 0, 0.08) 70%,
    transparent 100%);
  border-radius: 50%;
  z-index: 0;
}

/* 几何装饰 - 右上三角形 */
.geo-triangle {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  width: 0;
  height: 0;
  border-left: 70rpx solid transparent;
  border-right: 70rpx solid transparent;
  border-bottom: 120rpx solid rgba(255, 193, 7, 0.12);
  transform: rotate(15deg);
  z-index: 0;
}

/* 几何装饰 - 左下方形 */
.geo-square {
  position: absolute;
  bottom: 30rpx;
  left: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: rgba(218, 165, 32, 0.1);
  transform: rotate(-25deg);
  border-radius: 16rpx;
  z-index: 0;
}

/* 几何装饰 - 中间装饰圆 */
.geo-football {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle,
    rgba(255, 215, 0, 0.1) 0%,
    rgba(255, 193, 7, 0.08) 50%,
    transparent 100%);
  border-radius: 50%;
  z-index: 0;
}

/* 中间圆的内圈 */
.geo-football::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120rpx;
  height: 120rpx;
  border: 4rpx solid rgba(218, 165, 32, 0.12);
  border-radius: 50%;
  background: transparent;
}

/* 中间圆的小装饰点 */
.geo-football::after {
  content: '';
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 30rpx;
  height: 30rpx;
  background: rgba(255, 193, 7, 0.15);
  border-radius: 50%;
}

/* 左右布局容器 */
.profile-layout {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  gap: 32rpx; /* 增加头像和文字列之间的间距 */
}

/* 头像（左侧独立，保持140rpx） */
.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  flex-shrink: 0;
  box-shadow: 0 8rpx 24rpx rgba(218, 165, 32, 0.3);
}

/* 中间：文字信息（姓名、号码、昵称、惯用脚） */
.text-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

/* 姓名行 */
.name-row {
  display: flex;
  align-items: center;
}

.name {
  font-size: 38rpx;
  font-weight: 700;
  color: #2c3e50;
  line-height: 1.2;
}

.number-badge {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #d4a574;
  line-height: 1.2;
  text-align: left;
}

.nickname {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: 500;
  line-height: 1.3;
}

.team-name {
  font-size: 24rpx;
  color: #d4a574;
  font-weight: 600;
  line-height: 1.3;
}

/* 惯用脚行（缩小到2/3） */
.foot-row {
  display: flex;
  align-items: center;
  margin-top: 4rpx;
}

.foot-row > foot-skill-display {
  transform: scale(0.67);
  transform-origin: left center;
}

/* 右侧足球场容器 */
.field-container {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* football-field组件尺寸（缩小） */
.field-container > football-field {
  width: 180rpx;
  height: 270rpx;
}

/* ==================== 核心数据网格（一行4列） ==================== */
.stats-grid-section {
  margin: 0 24rpx 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  padding: 20rpx 8rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
}

.stat-card:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.06);
}

.stat-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.9;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 800;
  color: #2c3e50;
  line-height: 1;
}

.stat-label {
  font-size: 20rpx;
  font-weight: 600;
  color: #7f8c8d;
}

/* ==================== 详细数据列表 ==================== */
.details-section {
  margin: 0 24rpx 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f6f8;
}

.detail-row:last-child {
  border-bottom: none;
}

.detail-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.detail-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #636e72;
}

.detail-progress {
  width: 100%;
  max-width: 280rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f1f3f5;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.8s ease;
}

.detail-right {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 36rpx;
  font-weight: 800;
  color: #2c3e50;
  line-height: 1;
}

.detail-unit {
  font-size: 20rpx;
  font-weight: 600;
  color: #95a5a6;
}

/* ==================== 排名标签云 ==================== */
.rankings-section {
  margin: 0 24rpx 24rpx;
}

.section-title-simple {
  font-size: 28rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.ranking-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.rank-tag {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid #f5f6f8;
}

.rank-tag.gold {
  background: linear-gradient(135deg, #fff5e6 0%, #ffe4cc 100%);
  border-color: #f39c12;
}

.rank-tag.silver {
  background: linear-gradient(135deg, #f5f6f8 0%, #ecf0f1 100%);
  border-color: #bdc3c7;
}

.rank-tag.bronze {
  background: linear-gradient(135deg, #fef5f1 0%, #fde8e1 100%);
  border-color: #e67e22;
}

.tag-icon {
  font-size: 32rpx;
}

.tag-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #2c3e50;
}

/* ==================== 成就网格 ==================== */
.achievements-section {
  margin: 0 24rpx 24rpx;
}

.section-header-simple {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.count-badge {
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #f20810 0%, #ff4757 100%);
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 700;
  color: #ffffff;
}

.achievement-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.achievement-mini {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 12rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
}

.achievement-mini.unlocked {
  background: linear-gradient(135deg, #fff5e6 0%, #ffe4cc 100%);
  box-shadow: 0 2rpx 12rpx rgba(243, 156, 18, 0.15);
}

.achievement-mini.locked {
  opacity: 0.5;
}

.achievement-mini:active {
  transform: scale(0.95);
}

.achievement-icon-mini {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-emoji {
  font-size: 56rpx;
}

.icon-img {
  width: 56rpx;
  height: 56rpx;
}

.achievement-name-mini {
  font-size: 20rpx;
  font-weight: 600;
  color: #2c3e50;
  text-align: center;
  line-height: 1.3;
  max-width: 100%;
  word-wrap: break-word;
  white-space: normal;
}

.achievement-mini.locked .achievement-name-mini {
  color: #95a5a6;
}

/* ==================== 底部占位 ==================== */
.bottom-space {
  height: 40rpx;
}
