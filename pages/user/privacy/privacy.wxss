/* 隐私保护指引页面样式 */
.privacy-container {
  min-height: 100vh;
  background: #f5f6f8;
}

.content {
  height: 100vh;
  padding: 32rpx;
}

/* 标题 */
.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

/* 更新日期 */
.update-date {
  font-size: 24rpx;
  color: #95a5a6;
  text-align: center;
  margin-bottom: 48rpx;
}

/* 章节 */
.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--theme-color);
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid var(--theme-color);
}

.paragraph {
  display: block;
  font-size: 28rpx;
  color: #2c3e50;
  line-height: 1.8;
  margin-bottom: 16rpx;
  text-align: justify;
}

/* 联系信息 */
.contact-info {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
}

.contact-label {
  font-size: 28rpx;
  color: #636e72;
  margin-right: 16rpx;
}

.contact-value {
  font-size: 28rpx;
  color: var(--theme-color);
  font-weight: 600;
}

/* 底部占位 */
.bottom-space {
  height: 80rpx;
}
