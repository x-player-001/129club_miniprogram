/* 分享配置管理页面样式 */
.share-config-container {
  min-height: 100vh;
  background: #f5f6f8;
  padding: 24rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: var(--theme-color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #95a5a6;
}

/* 区域通用样式 */
.preview-section,
.edit-section,
.history-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
}

.section-tip {
  font-size: 22rpx;
  color: #95a5a6;
}

/* 分享预览卡片 */
.share-preview-card {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  border: 2rpx solid #ecf0f1;
}

.preview-title-wrapper {
  padding: 20rpx 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.preview-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  line-height: 1.4;
  word-break: break-all;
}

.preview-image-wrapper {
  position: relative;
  width: 100%;
  /* 227:186 比例，宽度100%时高度约为 81.9% */
  padding-bottom: 81.9%;
}

.preview-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.preview-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.overlay-text {
  font-size: 24rpx;
  color: #ffffff;
  padding: 8rpx 16rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 8rpx;
}

.preview-note {
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.preview-note text {
  font-size: 22rpx;
  color: #95a5a6;
}

/* 占位符说明 */
.placeholder-tips {
  margin-top: 24rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.tips-header {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tips-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2c3e50;
}

.tips-desc {
  font-size: 22rpx;
  color: #95a5a6;
}

.placeholder-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.placeholder-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 16rpx;
  background: #ffffff;
  border: 2rpx solid #ecf0f1;
  border-radius: 12rpx;
  transition: all 0.2s;
}

.placeholder-item:active {
  background: rgba(242, 8, 16, 0.1);
  border-color: var(--theme-color);
}

.ph-tag {
  font-size: 22rpx;
  font-weight: 600;
  color: var(--theme-color);
  font-family: monospace;
}

.ph-desc {
  font-size: 22rpx;
  color: #95a5a6;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
}

.label-tip {
  font-size: 22rpx;
  color: #95a5a6;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #ecf0f1;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2c3e50;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: var(--theme-color);
  background: #ffffff;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #ecf0f1;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2c3e50;
  box-sizing: border-box;
}

.char-count {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  font-size: 22rpx;
  color: #bdc3c7;
}

/* 图片选择器 */
.image-picker {
  display: flex;
}

.picker-preview {
  position: relative;
  width: 200rpx;
  height: 160rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.picker-image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 44rpx;
  height: 44rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  font-size: 32rpx;
  color: #ffffff;
  line-height: 1;
}

.picker-add {
  width: 200rpx;
  height: 160rpx;
  background: #f8f9fa;
  border: 2rpx dashed #dfe6e9;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.picker-add:active {
  background: #ecf0f1;
}

.add-icon {
  font-size: 48rpx;
  color: #bdc3c7;
  line-height: 1;
}

.add-text {
  font-size: 24rpx;
  color: #95a5a6;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.action-btn:active {
  transform: scale(0.98);
}

.reset-btn {
  background: #f8f9fa;
  border: 2rpx solid #dfe6e9;
  color: #636e72;
}

.reset-btn:active {
  background: #ecf0f1;
}

.save-btn {
  background: linear-gradient(135deg, var(--theme-color) 0%, var(--theme-color-dark) 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(242, 8, 16, 0.3);
}

.save-btn.disabled {
  opacity: 0.6;
  pointer-events: none;
}

/* 历史配置列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.history-item:active {
  background: #ecf0f1;
}

.history-item.active {
  border-color: var(--theme-color);
  background: rgba(242, 8, 16, 0.05);
}

.history-image-wrapper {
  position: relative;
  width: 120rpx;
  height: 96rpx;
  border-radius: 12rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.history-image {
  width: 100%;
  height: 100%;
}

.active-badge {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  padding: 4rpx 10rpx;
  background: var(--theme-color);
  color: #ffffff;
  font-size: 18rpx;
  border-radius: 8rpx;
}

.history-info {
  flex: 1;
  min-width: 0;
}

.history-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #2c3e50;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-time {
  display: block;
  font-size: 22rpx;
  color: #95a5a6;
}

/* 底部占位 */
.bottom-space {
  height: 60rpx;
}
