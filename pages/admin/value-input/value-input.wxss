/* 身价录入页面样式 */
.page-container {
  min-height: 100vh;
  background: #f5f6f8;
  padding-bottom: env(safe-area-inset-bottom);
}

/* Tab切换 */
.tab-bar {
  display: flex;
  background: #ffffff;
  padding: 0 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.tab-item {
  flex: 1;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #636e72;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #667eea;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 3rpx;
}

/* 表单容器 */
.form-container {
  padding: 24rpx;
}

.form-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.form-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.form-desc {
  font-size: 26rpx;
  color: #95a5a6;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #ecf0f1;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
  position: relative;
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.form-label .required {
  color: #e74c3c;
  margin-left: 4rpx;
}

/* 搜索输入框 */
.search-input-wrapper {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 0 24rpx;
  height: 88rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.search-input-wrapper:focus-within {
  border-color: #667eea;
  background: #ffffff;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #2c3e50;
}

.clear-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #dfe6e9;
  border-radius: 50%;
  margin-left: 12rpx;
}

.clear-btn text {
  font-size: 32rpx;
  color: #636e72;
  line-height: 1;
}

/* 下拉列表 */
.dropdown-list {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  max-height: 400rpx;
  overflow-y: auto;
  z-index: 100;
  margin-top: 8rpx;
}

.dropdown-item {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f5f6f8;
  transition: background 0.2s;
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item:active {
  background: #f8f9fa;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.user-name {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.user-number {
  font-size: 24rpx;
  color: #95a5a6;
}

.match-item {
  padding: 24rpx;
}

.match-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.match-title {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.match-date {
  font-size: 24rpx;
  color: #95a5a6;
}

.dropdown-empty {
  padding: 32rpx;
  text-align: center;
  font-size: 26rpx;
  color: #95a5a6;
}

/* 已选择提示 */
.selected-user {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #27ae60;
}

.check-icon {
  font-size: 24rpx;
}

/* 金额输入 */
.amount-input-wrapper {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 0 24rpx;
  height: 88rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.amount-input-wrapper:focus-within {
  border-color: #667eea;
  background: #ffffff;
}

.amount-input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.amount-unit {
  font-size: 28rpx;
  color: #95a5a6;
  margin-left: 12rpx;
}

.form-hint {
  font-size: 24rpx;
  color: #95a5a6;
  margin-top: 12rpx;
}

/* 选择器 */
.picker-value {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 0 24rpx;
  height: 88rpx;
  font-size: 28rpx;
  color: #2c3e50;
}

.picker-arrow {
  font-size: 20rpx;
  color: #95a5a6;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  height: 200rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #2c3e50;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.form-textarea:focus {
  border-color: #667eea;
  background: #ffffff;
}

/* 说明框 */
.info-box {
  background: #fef9e7;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 24rpx;
}

.info-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #f39c12;
  margin-bottom: 12rpx;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-item {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.6;
}

/* 提交按钮 */
.submit-btn {
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 48rpx;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s;
}

.submit-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.submit-btn text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.submit-btn.warning {
  background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
  box-shadow: 0 8rpx 24rpx rgba(243, 156, 18, 0.4);
}

.submit-btn.disabled {
  opacity: 0.6;
  pointer-events: none;
}
