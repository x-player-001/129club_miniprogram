/* 首页样式 */
.index-container {
  min-height: 100vh;
  position: relative;
  padding: 32rpx;
}

/* 顶部用户卡片 */
.header-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  margin-right: 24rpx;
}

.user-text {
  display: flex;
  flex-direction: column;
}

.greeting {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.team-tag {
  display: flex;
  align-items: center;
  padding: 8rpx 20rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #ff6b6b;
  align-self: flex-start;
}

.team-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.no-team {
  font-size: 24rpx;
  color: #95a5a6;
}

.message-icon {
  position: relative;
  width: 72rpx;
  height: 72rpx;
  background: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.message-icon image {
  width: 36rpx;
  height: 36rpx;
}

.badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: #e74c3c;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
  font-size: 20rpx;
  color: #ffffff;
  font-weight: 600;
  border: 3rpx solid #f5f6f8;
}

/* ========== 我的队伍卡片 - 嘉陵摩托主题 ========== */
.my-team-card {
  background: linear-gradient(135deg, #da1017 0%, #b00d13 100%);
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(218, 16, 23, 0.3);
  transition: all 0.3s ease;
}

.my-team-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(218, 16, 23, 0.35);
}

/* 队伍主信息区 */
.my-team-header {
  display: flex;
  align-items: center;
  padding: 32rpx;
  gap: 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.my-team-logo-wrapper {
  flex-shrink: 0;
}

.my-team-logo {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.15);
  padding: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.my-team-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.my-team-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 0.5rpx;
}

.my-team-captain {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.75);
}

.captain-icon {
  width: 28rpx;
  height: 28rpx;
}

.my-team-arrow {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  opacity: 0.4;
}

.my-team-arrow image {
  width: 20rpx;
  height: 20rpx;
  filter: brightness(0) invert(1);
}

/* 战绩数据区 */
.my-team-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 28rpx 32rpx;
  background: rgba(255, 255, 255, 0.05);
}

.my-stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.my-stat-number {
  font-size: 44rpx;
  font-weight: 700;
  font-variant-numeric: tabular-nums;
  line-height: 1;
}

.my-stat-number.win {
  color: #4CD964;
}

.my-stat-number.draw {
  color: #FFD700;
}

.my-stat-number.loss {
  color: #FF6B6B;
}

.my-stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
}

.my-stat-divider {
  width: 1rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.2);
}

/* 暂无队伍卡片 */
.no-team-card {
  background: #ba191f;
  border-radius: 32rpx;
  padding: 40rpx 40rpx;
  margin-bottom: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.no-team-card .empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  /* opacity: 0.5; */
}

.empty-text {
  font-size: 32rpx;
  color: #7f8c8d;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #bdc3c7;
}

/* 快捷功能区 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s;
}

.action-item:active .action-icon {
  transform: scale(0.95);
}

.action-icon image {
  width: 48rpx;
  height: 48rpx;
}

.matches-icon {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
}

.stats-icon {
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
}

.ranking-icon {
  background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
}

.team-icon {
  background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
}

.action-text {
  font-size: 26rpx;
  color: #2c3e50;
  font-weight: 500;
}

/* 区块标题 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
}

.title-line {
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(180deg, #ff6b6b 0%, #ee5a6f 100%);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.section-more {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #95a5a6;
}

.section-more .arrow {
  width: 20rpx;
  height: 20rpx;
  margin-left: 8rpx;
}

/* 当前赛季 */
.current-season {
  margin-bottom: 40rpx;
}

.season-card-compact {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.season-card-compact:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.season-header-compact {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.season-name-compact {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
}

.season-status {
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.season-status.active {
  background: #e8f5e9;
  color: #2e7d32;
}

.season-info-compact {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.season-title-compact {
  font-size: 26rpx;
  color: #636e72;
}

.season-matches-compact {
  font-size: 24rpx;
  color: #95a5a6;
}

/* 近期比赛 */
.recent-matches {
  margin-bottom: 40rpx;
}

.match-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.match-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.2s, box-shadow 0.2s;
}

.match-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.match-date {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  margin-right: 32rpx;
  padding-right: 32rpx;
  border-right: 2rpx solid #ecf0f1;
}

.date-day {
  font-size: 48rpx;
  font-weight: 700;
  color: #ff6b6b;
  line-height: 1;
  margin-bottom: 8rpx;
}

.date-month {
  font-size: 24rpx;
  color: #95a5a6;
}

.match-info {
  flex: 1;
}

.match-teams {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.team {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.team-logo {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 12rpx;
}

.team-name {
  font-size: 30rpx;
  /* color: #2c3e50; */
  font-weight: 500;
}

.match-vs {
  margin: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.vs-text {
  font-size: 28rpx;
  color: #95a5a6;
  font-weight: 600;
}

.score {
  display: flex;
  align-items: center;
}

.score-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #2c3e50;
}

.score-divider {
  font-size: 28rpx;
  color: #bdc3c7;
  margin: 0 8rpx;
}

.match-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #95a5a6;
  margin-bottom: 16rpx;
}

.match-time {
  margin-right: 24rpx;
}

.match-status {
  display: flex;
  justify-content: flex-end;
}

.status-tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-tag.upcoming {
  background: rgba(52, 152, 219, 0.1);
  color: #3498db;
}

.status-tag.ongoing {
  background: rgba(46, 204, 113, 0.1);
  color: #2ecc71;
}

.status-tag.finished {
  background: rgba(149, 165, 166, 0.1);
  color: #95a5a6;
}

/* 空状态 */
.empty-matches {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.empty-matches .empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-matches .empty-text {
  font-size: 28rpx;
  color: #95a5a6;
}

/* 个人数据摘要 */
.personal-stats {
  margin-bottom: 40rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.stat-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.2s;
}

.stat-card:active {
  transform: translateY(-4rpx);
}

.stat-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.stat-icon image {
  width: 40rpx;
  height: 40rpx;
}

.goal-icon {
  background: rgba(231, 76, 60, 0.1);
}

.assist-icon {
  background: rgba(52, 152, 219, 0.1);
}

.match-icon {
  background: rgba(46, 204, 113, 0.1);
}

.mvp-icon {
  background: rgba(243, 156, 18, 0.1);
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.stat-name {
  font-size: 24rpx;
  color: #95a5a6;
}

/* 底部占位 */
.bottom-space {
  height: 40rpx;
}
