/* components/tab-bar/tab-bar.wxss */
.tab-bar {
  background: #ffffff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tabs-scroll {
  width: 100%;
  white-space: nowrap;
}

.tabs {
  display: flex;
  align-items: center;
}

.tab-bar.scrollable .tabs {
  display: inline-flex;
  padding: 0 24rpx;
}

.tab-bar:not(.scrollable) .tabs {
  justify-content: space-around;
}

.tab-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx 32rpx;
  cursor: pointer;
  transition: all 0.3s;
  flex-shrink: 0;
}

.tab-bar:not(.scrollable) .tab-item {
  flex: 1;
}

.tab-icon {
  font-size: 32rpx;
  opacity: 0.6;
  transition: all 0.3s;
}

.tab-name {
  font-size: 28rpx;
  color: #636e72;
  font-weight: 600;
  transition: all 0.3s;
  white-space: nowrap;
}

/* 激活状态 */
.tab-item.active .tab-icon {
  opacity: 1;
}

.tab-item.active .tab-name {
  color: var(--theme-color, #f20810);
  font-weight: 700;
}

/* 下划线 */
.tab-line {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background: var(--theme-color, #f20810);
  border-radius: 3rpx;
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from {
    width: 0;
    opacity: 0;
  }
  to {
    width: 48rpx;
    opacity: 1;
  }
}
