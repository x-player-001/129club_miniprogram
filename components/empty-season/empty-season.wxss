/* components/empty-season/empty-season.wxss */
.empty-season {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  min-height: 600rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #95a5a6;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 48rpx;
}

.empty-action {
  padding: 20rpx 48rpx;
  background: var(--theme-color, #f20810);
  border-radius: 48rpx;
  transition: all 0.3s;
}

.empty-action:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.action-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
}
