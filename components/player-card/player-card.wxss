/* components/player-card/player-card.wxss */
.player-card {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 16rpx;
  transition: all 0.3s;
}

.player-card:active {
  transform: scale(0.98);
  background: #f8f9fa;
}

.player-card.disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* ========== 球员头像 ========== */
.player-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 4rpx solid #f5f6f8;
  flex-shrink: 0;
}

/* ========== 球员信息 ========== */
.player-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  min-width: 0;
}

/* 左列：姓名 + 号码（两行） */
.info-left-col {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  /* flex: 1 1 auto; */
  min-width: 120rpx;  /* 确保左列有足够空间显示名字和号码 */
}

.player-name-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-wrap: nowrap;
}

.player-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #2c3e50;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.captain-badge {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

.player-number-row {
  display: flex;
}

.jersey-number {
  font-size: 20rpx;
  font-weight: 600;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  white-space: nowrap;  /* 号码不换行 */
}

/* 默认样式 - 没有传入队伍颜色时使用灰色 */
.jersey-number.default {
  color: #636e72;
  background: #f1f3f5;
}

/* 外援标签 - 使用队伍颜色（通过 style 内联设置 color 和 background） */
.jersey-number.foreign-player {
  /* color 和 background 由内联 style 设置，使用队伍颜色 */
}

/* 中列：位置（垂直居中，允许多个位置换行） */
.info-middle-col {
  display: flex;
  align-items: center;
  flex: 0 1 auto;  /* 允许收缩但不扩展 */
  flex-wrap: wrap;  /* 允许多个位置标签换行 */
  gap: 4rpx;  /* 位置标签之间的间距 */
  max-width: 160rpx;  /* 限制最大宽度，超出则换行 */
}

/* 右列：惯用脚（垂直居中） */
.info-right-col {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-left: auto;  /* 推到最右边 */
}

.position {
  font-size: 24rpx;
  color: #95a5a6;
}

.team-tag {
  padding: 4rpx 12rpx;
  border: 1rpx solid;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 600;
}

/* ========== 球员数据 ========== */
.player-stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding-left: 24rpx;
  border-left: 2rpx solid #ecf0f1;
  flex-shrink: 0;
}

.stat-mini {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.stat-mini .value {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--theme-color, #f20810);
}

.stat-mini .label {
  font-size: 20rpx;
  color: #95a5a6;
}

/* ========== Draft模式 ========== */
.player-card.draft {
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.player-card.draft.selected {
  border-color: var(--theme-color, #f20810);
  background: linear-gradient(135deg, rgba(242, 8, 16, 0.05) 0%, rgba(242, 8, 16, 0.02) 100%);
}

.select-indicator {
  flex-shrink: 0;
}

.checkbox {
  width: 48rpx;
  height: 48rpx;
  border: 3rpx solid #dce1e5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  font-size: 32rpx;
  color: #ffffff;
}

.checkbox.checked {
  background: var(--theme-color, #f20810);
  border-color: var(--theme-color, #f20810);
}

/* ========== 紧凑版 ========== */
.player-card.compact {
  padding: 16rpx 20rpx;
  gap: 16rpx;
}

.compact .player-avatar {
  width: 72rpx;
  height: 72rpx;
  border-width: 3rpx;
}

.compact .player-name {
  font-size: 28rpx;
}

.compact .player-stats {
  gap: 16rpx;
  padding-left: 16rpx;
}

.compact .stat-mini .value {
  font-size: 24rpx;
}

.compact .stat-mini .label {
  font-size: 18rpx;
}
