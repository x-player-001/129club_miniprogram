/* components/ranking-item/ranking-item.wxss */
.ranking-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 24rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f5f6f8;
  transition: all 0.3s;
}

.ranking-item:active {
  background: #f8f9fa;
}

.ranking-item.highlight {
  background: linear-gradient(90deg, rgba(242, 8, 16, 0.05) 0%, transparent 100%);
  border-left: 4rpx solid var(--theme-color, #f20810);
  padding-left: 20rpx;
}

/* ========== 排名序号 ========== */
.rank-number {
  width: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.rank-text {
  font-size: 30rpx;
  font-weight: 700;
  color: #95a5a6;
}

/* 奖牌样式 */
.medal {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.medal-1 {
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  box-shadow: 0 2rpx 8rpx rgba(255, 215, 0, 0.3);
}

.medal-2 {
  background: linear-gradient(135deg, #c0c0c0 0%, #e8e8e8 100%);
  box-shadow: 0 2rpx 8rpx rgba(192, 192, 192, 0.3);
}

.medal-3 {
  background: linear-gradient(135deg, #cd7f32 0%, #e5a569 100%);
  box-shadow: 0 2rpx 8rpx rgba(205, 127, 50, 0.3);
}

.medal-icon {
  font-size: 30rpx;
}

/* ========== 球员信息 ========== */
.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 2rpx solid #f5f6f8;
  flex-shrink: 0;
  background: #f5f6f8;
}

.player-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  min-width: 0;
}

.name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
}

.meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 22rpx;
}

.team {
  font-weight: 600;
}

.matches {
  color: #95a5a6;
}

/* ========== 数据值 ========== */
.value-container {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
  flex-shrink: 0;
}

.value {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--theme-color, #f20810);
  line-height: 1;
}

.label {
  font-size: 22rpx;
  color: #95a5a6;
  line-height: 1;
}

/* ========== 箭头 ========== */
.arrow {
  font-size: 48rpx;
  color: #dce1e5;
  line-height: 1;
  flex-shrink: 0;
}
