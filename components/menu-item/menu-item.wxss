/* components/menu-item/menu-item.wxss */
.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  background: #ffffff;
  transition: background 0.2s;
}

.menu-item:active {
  background: #f5f6f8;
}

.menu-item:not(:last-child) {
  border-bottom: 1rpx solid #f0f0f0;
}

/* ========== 左侧内容 ========== */
.menu-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.menu-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon image {
  width: 40rpx;
  height: 40rpx;
}

.menu-text {
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 500;
}

/* ========== 徽章 ========== */
.menu-badge {
  min-width: 36rpx;
  height: 36rpx;
  padding: 0 8rpx;
  background: #e74c3c;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #ffffff;
  font-weight: 600;
  margin-right: 16rpx;
}

/* ========== 箭头 ========== */
.menu-arrow {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.4;
}
