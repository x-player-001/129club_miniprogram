/* components/stats-grid/stats-grid.wxss */
.stats-grid {
  display: grid;
  gap: 20rpx;
  padding: 24rpx;
}

.stats-grid.columns-2 {
  grid-template-columns: repeat(2, 1fr);
}

.stats-grid.columns-3 {
  grid-template-columns: repeat(3, 1fr);
}

.stats-grid.columns-4 {
  grid-template-columns: repeat(4, 1fr);
}

/* ========== 数据卡片 ========== */
.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 32rpx 20rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.stat-card:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.08);
}

/* ========== 图标 ========== */
.stat-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  position: relative;
  overflow: hidden;
}

/* 磨砂玻璃效果 */
.stat-icon::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  z-index: 0;
}

.stat-icon image {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  z-index: 1;
}

/* 图标样式类 - 磨砂玻璃样式 */
