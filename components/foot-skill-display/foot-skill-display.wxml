<!-- 惯用脚展示组件 -->
<view class="foot-skill-display" wx:if="{{_leftFootSkill >= 0 || _rightFootSkill >= 0}}">
  <!-- 左脚 -->
  <view class="foot-item">
    <view class="foot-icon-wrapper">
      <image
        class="foot-icon left-foot"
        src="{{leftFootIcon}}"
        mode="aspectFit">
      </image>
      <text class="foot-level">{{_leftFootSkill}}</text>
    </view>
  </view>

  <!-- 右脚 -->
  <view class="foot-item">
    <view class="foot-icon-wrapper">
      <image
        class="foot-icon right-foot"
        src="{{rightFootIcon}}"
        mode="aspectFit">
      </image>
      <text class="foot-level">{{_rightFootSkill}}</text>
    </view>
  </view>
</view>
