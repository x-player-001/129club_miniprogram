/* components/empty-state/empty-state.wxss */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 40rpx;
  text-align: center;
}

/* ========== 图标 ========== */
.empty-icon {
  margin-bottom: 20rpx;
}

.empty-icon.emoji {
  font-size: 80rpx;
}

.empty-icon.image {
  width: 200rpx;
  height: 200rpx;
}

/* ========== 文字 ========== */
.empty-text {
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #bdc3c7;
}

/* ========== 按钮 ========== */
.empty-button {
  margin-top: 40rpx;
  padding: 20rpx 48rpx;
  background: linear-gradient(135deg, var(--theme-color, #f20810) 0%, var(--theme-color-dark, #d10710) 100%);
  color: #ffffff;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(242, 8, 16, 0.3);
  transition: all 0.3s;
}

.empty-button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(242, 8, 16, 0.3);
}
