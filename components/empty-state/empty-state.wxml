<!-- components/empty-state/empty-state.wxml -->
<view class="empty-state">
  <!-- 图标 -->
  <block wx:if="{{icon}}">
    <!-- emoji图标 -->
    <text wx:if="{{icon.length <= 2}}" class="empty-icon emoji">{{icon}}</text>
    <!-- 图片图标 -->
    <image wx:else class="empty-icon image" src="{{icon}}" mode="aspectFit"></image>
  </block>

  <!-- 主提示文字 -->
  <text class="empty-text">{{text}}</text>

  <!-- 辅助说明文字 -->
  <text wx:if="{{hint}}" class="empty-hint">{{hint}}</text>

  <!-- 操作按钮 -->
  <button wx:if="{{buttonText}}" class="empty-button" bindtap="onButtonTap">
    {{buttonText}}
  </button>
</view>
