/* components/team-stats-bar/team-stats-bar.wxss */
.team-stats-bar {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 24rpx 32rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
}

.stat-value.win {
  color: #27ae60;
}

.stat-value.draw {
  color: #f39c12;
}

.stat-value.loss {
  color: #e74c3c;
}

.stat-label {
  font-size: 24rpx;
  color: #95a5a6;
}

.stat-divider {
  width: 2rpx;
  height: 40rpx;
  background: #dce1e5;
}

/* ========== 紧凑版 ========== */
.team-stats-bar.compact {
  padding: 16rpx 24rpx;
}

.compact .stat-value {
  font-size: 28rpx;
}

.compact .stat-label {
  font-size: 22rpx;
}

.compact .stat-divider {
  height: 32rpx;
}

