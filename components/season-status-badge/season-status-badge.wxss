/* components/season-status-badge/season-status-badge.wxss */
.status-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.status-text {
  line-height: 1;
}

/* 即将开始 - 橙色 */
.status-upcoming {
  background: #fff3e0;
  color: #f57c00;
}

/* 进行中 - 绿色 */
.status-active {
  background: #e8f5e9;
  color: #2e7d32;
}

/* 已完成 - 蓝色 */
.status-completed {
  background: #e3f2fd;
  color: #1976d2;
}

/* 已归档 - 灰色 */
.status-archived {
  background: #f5f5f5;
  color: #757575;
}
